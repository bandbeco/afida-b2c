<div class="card bg-base-100 shadow-sm hover:shadow-md transition product-card h-full flex flex-col" data-product-id="<%= product.id %>">
  <%= link_to product_path(product.slug), class: "flex flex-col flex-1", data: { turbo_frame: "_top" } do %>
    <figure class="aspect-square overflow-hidden flex-shrink-0">
      <%= product_photo_tag(product.primary_photo,
                            alt: product.name,
                            class: "w-full h-full object-cover hover:scale-105 transition-transform duration-300",
                            variant: { resize_to_limit: [400, 400] },
                            loading: "lazy") %>
    </figure>

    <div class="card-body p-4 flex flex-col flex-1">
      <h2 class="card-title text-lg"><%= product.name %></h2>

      <% if product.description_short_with_fallback.present? %>
        <p class="text-sm text-gray-600 mb-2 line-clamp-2 flex-1"><%= product.description_short_with_fallback %></p>
      <% else %>
        <div class="flex-1"></div>
      <% end %>

      <% price_range = product.price_range %>
      <% price_unit = product.customizable_template? ? "unit" : "pack" %>
      <% if price_range.is_a?(Array) %>
        <p class="text-sm text-gray-600 mt-auto">from <%= number_to_currency(price_range[0], unit: "£") %> / <%= price_unit %></p>
      <% elsif price_range %>
        <p class="text-sm text-gray-600 mt-auto">from <%= number_to_currency(price_range, unit: "£") %> / <%= price_unit %></p>
      <% end %>
    </div>
  <% end %>

  <% show_quick_add = local_assigns.fetch(:show_quick_add, true) %>
  <% if show_quick_add && product.product_type == "standard" && product.active_variants.any? %>
    <div class="card-actions p-4 pt-0">
      <%= link_to quick_add_product_path(product),
                  data: {
                    turbo_frame: "quick-add-modal",
                    fallback_url: product_path(product)
                  },
                  class: "btn btn-secondary btn-sm w-full" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        Quick Add
      <% end %>
    </div>
  <% end %>
</div>
