<% content_for :title, "Free Samples | Try Before You Buy | Afida" %>
<% content_for :meta_description, "Request up to 5 free samples of our eco-friendly catering supplies. Try our cups, lids, food containers and more before committing to a bulk purchase. UK delivery Â£7.50." %>

<div class="min-h-screen bg-base-100">
  <!-- Header -->
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl font-bold mb-4 py-6">Request Free Samples</h1>
  </div>
  <div class="bg-base-200 py-8">
    <div class="max-w-3xl mx-auto container px-4 text-center">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-6xl mb-3 text-secondary font-semibold">1</div>
            <h3 class="font-semibold mb-2">Browse & Select</h3>
            <p class="text-sm text-base-content/70">
              Choose up to 5 samples from our range of eco-friendly products.
            </p>
          </div>
          <div class="text-center">
            <div class="text-6xl mb-3 text-secondary font-semibold">2</div>
            <h3 class="font-semibold mb-2">Checkout</h3>
            <p class="text-sm text-base-content/70">
              Samples are free of charge - all you need to do is cover the delivery cost.
            </p>
          </div>
          <div class="text-center">
            <div class="text-6xl mb-3 text-secondary font-semibold">3</div>
            <h3 class="font-semibold mb-2">Test & Decide</h3>
            <p class="text-sm text-base-content/70">
              Try before you buy. Confident in your choice? Order in bulk.
            </p>
          </div>
        </div>
    </div>
  </div>

  <!-- Sample Counter (sticky) -->
  <%= render "samples/sample_counter", sample_count: @sample_count %>

  <!-- Categories Grid -->
  <div class="container mx-auto px-4 py-12">
    <% if @categories.any? %>
      <div class="space-y-6">
        <% @categories.each do |category| %>
          <%= render "samples/category_card",
                     category: category,
                     selected_count: @selected_samples_by_category[category.id] || 0 %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <div class="text-6xl mb-4">ðŸ“¦</div>
        <h2 class="text-2xl font-semibold mb-2">No Samples Available</h2>
        <p class="text-base-content/70">
          We're currently preparing our sample collection. Check back soon!
        </p>
      </div>
    <% end %>
  </div>
</div>
