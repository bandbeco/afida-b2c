<% content_for :title, "Request Free Product Samples | Afida" %>
<% content_for :meta_description, "Request up to #{sample_limit} free samples of eco-friendly catering supplies. Try cups, lids, and containers before bulk ordering. UK delivery Â£7.50." %>

<%= content_for :head do %>
  <script type="application/ld+json">
    <%= raw({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "How do I request samples?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Browse our sample collection, select up to #{sample_limit} products you'd like to try, and proceed to checkout. Samples are completely free - you only pay Â£7.50 for delivery."
          }
        },
        {
          "@type": "Question",
          "name": "How many free samples can I request?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You can request up to #{sample_limit} free samples per order. This allows you to test different products before committing to a bulk purchase."
          }
        },
        {
          "@type": "Question",
          "name": "Is there a cost for samples?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "The samples themselves are completely free. You only need to cover the delivery cost of Â£7.50. If you add samples to a regular order, they ship free with your purchase."
          }
        }
      ]
    }.to_json) %>
  </script>
<% end %>

<div class="min-h-screen bg-base-100">
  <!-- Flash Messages Container for Turbo Stream updates -->
  <div id="flash-messages" class="container mx-auto px-4"></div>

  <!-- Header -->
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl mb-4 pt-6">Request Free Samples</h1>
  </div>
  <div class="bg-base-200 py-8">
    <div class="max-w-3xl mx-auto container px-4 text-center">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-6xl mb-3 text-secondary">1</div>
            <h3 class="mb-2">Browse & Select</h3>
            <p class="text-sm text-base-content/70">
              Choose up to <%= sample_limit %> samples from our range of eco-friendly products.
            </p>
          </div>
          <div class="text-center">
            <div class="text-6xl mb-3 text-secondary">2</div>
            <h3 class="mb-2">Checkout</h3>
            <p class="text-sm text-base-content/70">
              Samples are free of charge - all you need to do is cover the delivery cost.
            </p>
          </div>
          <div class="text-center">
            <div class="text-6xl mb-3 text-secondary">3</div>
            <h3 class="mb-2">Test & Decide</h3>
            <p class="text-sm text-base-content/70">
              Try before you buy. Confident in your choice? Order in bulk.
            </p>
          </div>
        </div>
    </div>
  </div>

  <!-- Sample Counter (sticky) -->
  <%= render "samples/sample_counter", sample_count: @sample_count %>

  <!-- Curated Sample Packs -->
  <% if @sample_packs.any? %>
    <div class="container mx-auto px-4 py-12 border-b border-base-200">
      <h2 class="text-xl">Curated Sample Packs</h2>
      <p class="text-base-content/70 mb-6">Get started quickly with our hand-picked selections for your business type.</p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @sample_packs.each do |pack| %>
          <%= link_to pack_samples_path(pack.slug), class: "card bg-base-100 shadow-sm hover:shadow-md transition" do %>
            <div class="relative">
              <% if pack.image.attached? %>
                <figure class="aspect-video overflow-hidden">
                  <%= image_tag pack.image.variant(resize_to_fill: [400, 225]),
                                alt: pack.name,
                                class: "w-full h-full object-cover hover:scale-105 transition-transform duration-300",
                                loading: "lazy" %>
                </figure>
              <% else %>
                <figure class="aspect-video bg-gradient-to-br from-primary/10 to-secondary/10 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                  </svg>
                </figure>
              <% end %>
              <span class="badge bg-white text-black border-0 badge-sm absolute top-2 right-2">Sample Pack</span>
            </div>

            <div class="card-body p-4">
              <h3><%= pack.name %></h3>
              <% if pack.description.present? %>
                <p class="text-sm text-base-content/70 line-clamp-3"><%= pack.description %></p>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Categories Grid -->
  <div class="container mx-auto px-4 py-12">
    <% if @sample_packs.any? %>
      <h2 class="text-2xl mb-2">Browse by Category</h2>
      <p class="text-base-content/70 mb-6">Or choose individual samples from our product categories.</p>
    <% end %>

    <% if @categories.any? %>
      <div class="space-y-6">
        <% @categories.each do |category| %>
          <%= render "samples/category_card",
                     category: category,
                     selected_count: @selected_samples_by_category[category.id] || 0 %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <div class="text-6xl mb-4" role="img" aria-label="Empty box">ðŸ“¦</div>
        <h2 class="text-2xl mb-2">No Samples Available</h2>
        <p class="text-base-content/70">
          We're currently preparing our sample collection. Check back soon!
        </p>
      </div>
    <% end %>
  </div>
</div>
