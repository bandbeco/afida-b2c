<article class="group">
  <%= link_to blog_post_path(post), class: "block" do %>
    <%# Cover Image %>
    <div class="aspect-[4/3] mb-4 overflow-hidden rounded-lg bg-gray-100">
      <% if post.cover_image.attached? %>
        <%= image_tag post.cover_image.variant(resize_to_fill: [600, 450]),
                      alt: post.title,
                      class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
      <% else %>
        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
      <% end %>
    </div>

    <%# Category Badge (optional - can be hidden on category pages) %>
    <% if local_assigns[:show_category] != false && post.blog_category %>
      <div class="mb-3">
        <span class="inline-block px-3 py-1 text-sm text-gray-700 border border-gray-300 rounded-full">
          <%= post.blog_category.name %>
        </span>
      </div>
    <% end %>

    <%# Content %>
    <div>
      <h2 class="text-xl text-gray-900 mb-3 group-hover:text-primary transition-colors">
        <%= post.title %>
      </h2>
      <p class="text-gray-600 line-clamp-3">
        <%= post.excerpt_with_fallback %>
      </p>
    </div>
  <% end %>
</article>
