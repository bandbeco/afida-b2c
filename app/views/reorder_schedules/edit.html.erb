<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="mb-6">
    <%= link_to reorder_schedule_path(@schedule), class: "text-sm text-base-content/70 hover:text-base-content inline-flex items-center gap-1" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      Back to Schedule
    <% end %>
  </div>

  <div class="bg-base-100 rounded-lg shadow-sm border border-base-200 p-6">
    <h1 class="text-2xl font-bold mb-2">Edit Reorder Schedule</h1>
    <p class="text-base-content/70 mb-6">
      Update your delivery frequency or modify the items in your schedule.
    </p>

    <%= form_with model: @schedule, class: "space-y-6" do |f| %>
      <div>
        <label class="block text-sm font-medium mb-3">Delivery Frequency</label>
        <div class="grid grid-cols-2 gap-3">
          <% @frequencies.each do |frequency| %>
            <label class="cursor-pointer">
              <%= f.radio_button :frequency, frequency, class: "peer sr-only" %>
              <div class="p-4 border-2 border-base-200 rounded-lg text-center transition-all peer-checked:border-primary peer-checked:bg-primary/5">
                <span class="block font-medium"><%= frequency.titleize.gsub('_', ' ') %></span>
              </div>
            </label>
          <% end %>
        </div>
      </div>

      <% if @schedule.reorder_schedule_items.any? %>
        <div>
          <label class="block text-sm font-medium mb-3">Items in Scheduled Reorder</label>
          <div class="space-y-3">
            <%= f.fields_for :reorder_schedule_items do |item_form| %>
              <div class="flex items-center gap-4 p-4 bg-base-200/50 rounded-lg">
                <div class="flex-1">
                  <p class="font-medium"><%= item_form.object.product_variant.display_name %></p>
                  <p class="text-sm text-base-content/70"><%= number_to_currency(item_form.object.price, unit: 'Â£') %> each</p>
                </div>
                <div class="flex items-center gap-2">
                  <%= item_form.hidden_field :id %>
                  <%= item_form.number_field :quantity, min: 1, class: "input input-bordered w-20 text-center" %>
                  <label class="btn btn-ghost btn-sm text-error">
                    <%= item_form.check_box :_destroy, class: "hidden" %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  </label>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="bg-warning/10 border border-warning/20 rounded-lg p-4 text-sm">
          <p class="text-warning-content">No items in this schedule. Add items to continue receiving deliveries.</p>
        </div>
      <% end %>

      <div class="flex gap-3">
        <%= f.submit "Save Changes", class: "btn btn-primary flex-1" %>
        <%= link_to "Cancel", reorder_schedule_path(@schedule), class: "btn btn-ghost" %>
      </div>
    <% end %>
  </div>
</div>
