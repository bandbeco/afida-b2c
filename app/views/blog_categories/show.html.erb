<% content_for :title, "#{@blog_category.name} | Blog | Afida" %>
<% content_for :meta_description, "Browse #{@blog_category.name.downcase} articles from the Afida blog." %>

<% content_for :head do %>
  <%= canonical_url(blog_category_url(@blog_category)) %>

  <%# Open Graph Tags for Social Sharing %>
  <meta property="og:title" content="<%= @blog_category.name %> | Blog | Afida">
  <meta property="og:description" content="Browse <%= @blog_category.name.downcase %> articles from the Afida blog.">
  <meta property="og:url" content="<%= blog_category_url(@blog_category) %>">
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="Afida">

  <%# Twitter Card Tags %>
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="<%= @blog_category.name %> | Blog | Afida">
  <meta name="twitter:description" content="Browse <%= @blog_category.name.downcase %> articles from the Afida blog.">

  <%# Breadcrumb Structured Data %>
  <script type="application/ld+json">
    <%= raw breadcrumb_structured_data([
      { name: "Home", url: root_url },
      { name: "Blog", url: blog_posts_url },
      { name: @blog_category.name, url: blog_category_url(@blog_category) }
    ]) %>
  </script>
<% end %>

<div class="container mx-auto px-4 py-12 max-w-6xl">
  <!-- Header -->
  <div class="text-center mb-16">
    <div class="mb-4">
      <%= link_to blog_posts_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-primary transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        All posts
      <% end %>
    </div>
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4"><%= @blog_category.name %></h1>
    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
      <%= pluralize(@blog_posts.size, "article") %> in this category
    </p>
  </div>

  <!-- Blog Posts Grid -->
  <% if @blog_posts.any? %>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% @blog_posts.each do |post| %>
        <%= render "blog_posts/post_card", post: post, show_category: false %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gray-100 flex items-center justify-center">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
      </div>
      <p class="text-gray-600 mb-4">No posts in this category yet.</p>
      <%= link_to "Browse all posts", blog_posts_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
