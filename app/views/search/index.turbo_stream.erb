<%# Turbo Stream response for AJAX search updates %>
<% if @modal %>
  <%# Modal search results %>
  <%= turbo_stream.update "search-modal-results" do %>
    <%= render "modal_results" %>
  <% end %>
<% else %>
  <%# Header dropdown search results %>
  <%= turbo_stream.update "header-search-results" do %>
    <%= render "results" %>
  <% end %>
<% end %>
