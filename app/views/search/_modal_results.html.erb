<%# Search results for modal - larger display than header dropdown %>
<%# Variables: @variants (search results), @query (search term), @total_count (total matches) %>

<% if @query.blank? || @query.length < 2 %>
  <div class="text-center py-12 text-gray-500">
    <p>Type at least 2 characters to search</p>
  </div>
<% elsif @variants.empty? %>
  <div class="text-center py-12">
    <svg class="mx-auto w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
    <p class="text-gray-500 text-lg">No results found for "<%= @query %>"</p>
    <p class="text-gray-400 mt-2">Try a different search term or browse our categories</p>
  </div>
<% else %>
  <%# Results header %>
  <div class="mb-4 flex items-center justify-between">
    <p class="text-sm text-gray-500">
      <% if @total_count > @variants.size %>
        Showing <%= @variants.size %> of <%= @total_count %> results for "<%= @query %>"
      <% else %>
        <%= pluralize(@variants.size, "result") %> for "<%= @query %>"
      <% end %>
    </p>
  </div>

  <%# Results grid %>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
    <% @variants.each do |variant| %>
      <%= link_to product_variant_path(variant.slug),
                  class: "group block bg-white rounded-lg border border-gray-100 hover:border-primary hover:shadow-md transition overflow-hidden",
                  data: { turbo_frame: "_top" } do %>
        <%# Product image %>
        <div class="aspect-square bg-gray-50 overflow-hidden">
          <%= product_photo_tag(variant.primary_photo,
                                alt: variant.full_name,
                                class: "w-full h-full object-contain group-hover:scale-105 transition duration-300",
                                variant: { resize_and_pad: [200, 200, { background: [255, 255, 255] }] },
                                loading: "lazy") %>
        </div>

        <%# Product info %>
        <div class="p-3">
          <h3 class="font-medium text-sm text-gray-900 line-clamp-2 group-hover:text-primary transition">
            <%= variant.full_name %>
          </h3>
          <p class="text-primary font-semibold mt-1">
            <%= number_to_currency(variant.price) %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>

  <%# View all link %>
  <% if @total_count > @variants.size %>
    <div class="mt-6 text-center">
      <%= link_to shop_path(q: @query),
                  class: "inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-focus transition font-medium",
                  data: { turbo_frame: "_top" } do %>
        View all <%= @total_count %> results
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
    </div>
  <% end %>
<% end %>
