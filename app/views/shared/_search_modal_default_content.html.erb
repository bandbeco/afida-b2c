<%# Default content for search modal - shown before user starts typing %>
<%# Includes quick search chips and branded products promo banner %>

<%
  # Hardcoded quick search terms
  quick_terms = ["Cups", "Pizza boxes", "Napkins", "Straws", "Takeaway containers", "Ice cream"]
%>

<%# Quick search chips %>
<div class="mb-8">
  <p class="text-sm font-medium text-gray-500 mb-3">Most searched</p>
  <div class="flex flex-wrap gap-2">
    <% quick_terms.each do |term| %>
      <button type="button"
              data-action="click->search-modal#quickSearch"
              data-term="<%= term %>"
              class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-full text-sm transition border border-black">
        <%= term %>
      </button>
    <% end %>
  </div>
</div>

<%# Branded products promo banner %>
<%= link_to branded_products_path,
            class: "group block rounded-xl overflow-hidden bg-gray-100 hover:bg-gray-200 transition border border-black border-2 shadow-md shadow-black/20",
            data: { turbo_frame: "_top" } do %>
  <div class="flex items-center gap-6 p-4">
    <%# Image %>
    <div class="hidden sm:block flex-shrink-0 w-36 h-36 rounded-lg overflow-hidden bg-gray-200">
      <%= vite_image_tag "images/branding/DSC_6736.webp",
                         class: "w-full h-full object-cover",
                         alt: "Branded coffee cups",
                         loading: "lazy" %>
    </div>

    <%# Content %>
    <div class="flex-1">
      <div class="badge badge-outline badge-sm mb-4">
        Low Minimums
      </div>
      <div class="badge badge-outline badge-sm mb-4">
        High Quality Printing
      </div>
      <div class="badge badge-outline badge-sm mb-4">
        Free Storage
      </div>
      <h3 class="text-xl text-gray-900 mb-2">Print your branding on our products in full colour</h3>
      <p class="text-gray-600 text-sm mb-4">
        Brandable cups, boxes & packaging with volume discounts up to <span class="underline">70% off</span>.
      </p>
      <span class="btn btn-primary btn-xs">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7" />
        </svg>
        Explore branded products
      </span>
    </div>
  </div>
<% end %>
