<%# Default content for search modal - shown before user starts typing %>
<%# Includes quick search chips and branded products promo banner %>

<%
  # Hardcoded quick search terms
  quick_terms = ["Cups", "Pizza boxes", "Napkins", "Straws", "Takeaway containers", "Ice cream"]
%>

<%# Quick search chips %>
<div class="mb-8">
  <p class="text-sm font-medium text-gray-500 mb-3">Most searched</p>
  <div class="flex flex-wrap gap-2">
    <% quick_terms.each do |term| %>
      <button type="button"
              data-action="click->search-modal#quickSearch"
              data-term="<%= term %>"
              class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-full text-sm font-medium text-gray-700 transition">
        <%= term %>
      </button>
    <% end %>
  </div>
</div>

<%# Branded products promo banner %>
<%= link_to branded_products_path,
            class: "group block rounded-xl overflow-hidden bg-gray-900 hover:bg-gray-800 transition",
            data: { turbo_frame: "_top" } do %>
  <div class="flex items-center gap-6 p-6">
    <%# Image %>
    <div class="hidden sm:block flex-shrink-0 w-32 h-32 rounded-lg overflow-hidden bg-gray-800">
      <%= vite_image_tag "images/branding/DSC_6736.webp",
                         class: "w-full h-full object-cover",
                         alt: "Branded coffee cups",
                         loading: "lazy" %>
    </div>

    <%# Content %>
    <div class="flex-1">
      <p class="text-sm text-gray-400 mb-1">Custom branding</p>
      <h3 class="text-xl font-semibold text-white mb-2">Add your logo to our products</h3>
      <p class="text-gray-300 text-sm mb-4">
        Branded cups, boxes & packaging with volume discounts up to 70% off.
      </p>
      <span class="inline-flex items-center gap-2 text-white font-medium group-hover:gap-3 transition-all">
        Explore branded products
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    </div>
  </div>
<% end %>
