<div class="pattern-bg pattern-bg-primary pattern-visible border-t-4 border-primary">
  <div class="navbar min-h-0 py-2 container mx-auto px-5">
    <div class="navbar-start">
      <div class="dropdown lg:hidden">
        <div tabindex="0" role="button" class="btn btn-ghost" aria-label="Open menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /> </svg>
        </div>
        <ul tabindex="0" class="menu dropdown-content bg-base-100 rounded-box z-50 mt-3 w-52 p-4 shadow flex flex-col gap-3">
          <li class="text-lg"><%= link_to "Shop All", shop_path, class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(shop_path) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Collections", collections_path, class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{request.path.start_with?('/collections') ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Free Samples", samples_path, class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{request.path.start_with?('/samples') ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Cups & Lids", category_path('cups-and-lids'), class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(category_path('cups-and-lids')) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Ice Cream Cups", category_path('ice-cream-cups'), class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(category_path('ice-cream-cups')) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Napkins", category_path('napkins'), class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(category_path('napkins')) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Pizza Boxes", category_path('pizza-boxes'), class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(category_path('pizza-boxes')) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Straws", category_path('straws'), class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(category_path('straws')) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Takeaway Containers", category_path('takeaway-containers'), class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(category_path('takeaway-containers')) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Takeaway Extras", category_path('takeaway-extras'), class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(category_path('takeaway-extras')) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Branding", branding_path, class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(branding_path) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
          <li class="text-lg"><%= link_to "Price List", price_list_path, class: "block hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(price_list_path) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
        </ul>
      </div>
      <%= link_to root_path, class: "text-xl group hover:bg-transparent hover:border-transparent hover:shadow-none", "aria-label": "Afida Home" do %>
        <%= render "shared/logo" %>
      <% end %>
    </div>

    <div class="navbar-center hidden lg:flex">
      <ul class="flex gap-6 px-1 items-center">
        <li class="text-lg"><%= link_to "Shop All", shop_path, class: "hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(shop_path) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
        <li class="text-lg"><%= render "shared/collections_mega_menu" %></li>
        <li class="text-lg"><%= link_to "Free Samples", samples_path, class: "hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{request.path.start_with?('/samples') ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
        <li class="text-lg"><%= link_to "Branding", branding_path, class: "hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(branding_path) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
        <li class="text-lg"><%= link_to "Price List", price_list_path, class: "hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(price_list_path) ? 'underline decoration-secondary decoration-2 underline-offset-8' : ''}" %></li>
      </ul>
    </div>

    <div class="navbar-end">
      <%# Search button - opens search modal via global event %>
      <button type="button"
              class="btn btn-ghost btn-circle mr-2"
              aria-label="Search products"
              onclick="window.dispatchEvent(new CustomEvent('search-modal:open'))">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </button>

      <%= render "shared/cart_counter" %>

      <% if authenticated? %>
        <details class="dropdown dropdown-center ml-4 pb-6 mt-6" data-testid="account-dropdown">
          <summary class="hover:cursor-pointer avatar avatar-placeholder list-none">
            <div class="bg-neutral text-neutral-content w-10 rounded-full">
              <span class="text-xl"><%= Current.user.initials %></span>
            </div>
          </summary>
          <ul class="menu dropdown-content bg-base-200 rounded-box z-[1] mt-3 w-48 p-2 shadow">
            <% if Current.user&.admin? %>
              <li>
                <%= link_to "/admin" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /> </svg>
                  Admin Panel
                <% end %>
              </li>
            <% end %>
            <% if Current.user&.organization_id? %>
              <li>
                <%= link_to organizations_products_path do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /> </svg>
                  My Branded Products
                <% end %>
              </li>
            <% end %>
            <li>
              <%= link_to account_path do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /> </svg>
                Account Settings
              <% end %>
            </li>
            <li>
              <%= link_to account_addresses_path do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /> </svg>
                Addresses
              <% end %>
            </li>
            <li>
              <%= link_to orders_path do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /> </svg>
                Orders
              <% end %>
            </li>
            <li>
              <%= link_to reorder_schedules_path do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /> </svg>
                <span class="whitespace-nowrap">Scheduled Reorders</span>
              <% end %>
            </li>
            <li>
              <%= link_to session_path, data: { turbo_method: :delete } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
                Logout
              <% end %>
            </li>
          </ul>
        </details>
      <% else %>
        <div class="flex items-center gap-1 sm:gap-2 ml-4">
          <%= link_to "Sign In", new_session_path, class: "btn btn-xs sm:btn-sm btn-primary" %>
          <%= link_to "Sign Up", new_registration_path, class: "btn btn-xs sm:btn-sm btn-ghost hidden sm:inline-flex" %>
        </div>
      <% end %>
    </div>
  </div>
</div>