<!-- Category Sub-Navigation -->
<%
  # Navigation categories with their display names and slugs
  nav_categories = [
    { slug: "cups-and-lids", name: "Cups & Lids" },
    { slug: "ice-cream-cups", name: "Ice Cream Cups" },
    { slug: "napkins", name: "Napkins" },
    { slug: "pizza-boxes", name: "Pizza Boxes" },
    { slug: "straws", name: "Straws" },
    { slug: "takeaway-containers", name: "Takeaway Containers" },
    { slug: "takeaway-extras", name: "Takeaway Extras" }
  ]
%>
<div class="bg-base-200 border-b border-base-300 hidden lg:block">
  <div class="container mx-auto px-4 flex justify-center">
    <ul class="flex gap-6 py-4">
      <% nav_categories.each do |cat| %>
        <li>
          <%= link_to category_path(cat[:slug]), class: "flex items-center gap-2 hover:underline hover:decoration-secondary hover:decoration-2 hover:underline-offset-8 transition-colors #{current_page?(category_path(cat[:slug])) ? 'text-base-content underline decoration-secondary decoration-2 underline-offset-8' : 'text-base-content'}" do %>
            <%= category_icon_tag(cat[:slug], alt: "#{cat[:name]} icon") %>
            <span class="text-lg font-medium"><%= cat[:name] %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
