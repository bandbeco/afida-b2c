<div id="drawer_cart_content" class="flex flex-col h-full">
  <% notice ||= nil %>
  <% if notice %>
    <%= render "shared/flash_info", message: notice %>
  <% end %>

  <div class="flex items-center justify-between mb-4 flex-shrink-0">
    <h2 class="text-xl font-bold">Shopping Cart</h2>
  </div>

  <% if Current.cart && Current.cart.cart_items.any? %>
    <div class="space-y-3 mb-4 flex-1 overflow-y-auto min-h-0 scrollbar-visible">
      <% Current.cart.cart_items.includes(:product, product_variant: [:product_photo_attachment, :lifestyle_photo_attachment]).each do |cart_item| %>
        <% if cart_item.product.present? && cart_item.product_variant.present? %>
          <div class="flex items-center space-x-3 p-3 bg-base-100 rounded-lg">
            <div class="relative flex-shrink-0">
              <%= product_photo_tag(cart_item.product_variant.primary_photo, alt: cart_item.product_variant.display_name, class: "w-12 h-12 rounded bg-white object-contain") %>
              <% if cart_item.sample? %>
                <%= render "shared/sample_badge", size: :sm %>
              <% end %>
            </div>

            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium truncate"><%= cart_item.product.name %></p>
              <p class="text-xs text-gray-500 truncate">
                <% if cart_item.configured? %>
                  Size: <%= cart_item.configuration["size"] %>
                <% else %>
                  <%= cart_item.product_variant.name %>
                <% end %>
              </p>
              <div class="flex justify-between items-center mt-1">
                <span class="text-xs">
                  <% if cart_item.sample? %>
                    1 unit
                  <% else %>
                    <%= format_quantity_display(cart_item) %>
                  <% end %>
                </span>
                <span class="text-sm font-medium">
                  <% if cart_item.sample? %>
                    Free
                  <% else %>
                    <%= number_to_currency(cart_item.subtotal_amount) %>
                  <% end %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="border-t pt-4 flex-shrink-0">
      <div class="flex justify-between items-center mb-4">
        <span class="font-medium">Subtotal</span>
        <span><%= number_to_currency(Current.cart.subtotal_amount) %></span>
      </div>

      <div class="flex justify-between items-center mb-4">
        <span class="font-medium">VAT <%= VAT_RATE * 100 %>%</span>
        <span><%= number_to_currency(Current.cart.vat_amount) %></span>
      </div>

      <div class="flex justify-between items-center mb-8">
        <span class="font-medium">Total</span>
        <span class="text-lg"><%= number_to_currency(Current.cart.total_amount) %></span>
      </div>

      <div>
        <%= button_to "Proceed to Checkout", checkout_path, class: "btn btn-primary btn-lg w-full", data: { turbo: false } %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-8">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      <p class="text-gray-500 text-sm mb-4">Your cart is empty</p>
      <%= link_to "Continue Shopping", "#", class: "btn btn-outline btn-sm w-full", data: { action: "click->cart-drawer#close" } %>
    </div>
  <% end %> 
</div>