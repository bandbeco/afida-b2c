<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">

    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-gray-900">Your Order is Ready</h1>
      <p class="text-lg text-gray-600 mt-2">
        Scheduled for delivery on <strong><%= @pending_order.scheduled_for.strftime("%B %d, %Y") %></strong>
      </p>
    </div>

    <% if @pending_order.unavailable_items.any? %>
      <div class="alert alert-warning mb-8">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div>
          <h3 class="font-bold">Some items are no longer available</h3>
          <ul class="mt-2 list-disc list-inside">
            <% @pending_order.unavailable_items.each do |item| %>
              <li><%= item["product_name"] %> - <%= item["reason"] %></li>
            <% end %>
          </ul>
          <p class="mt-2 text-sm">
            These items have been removed. You can
            <%= link_to "edit your order", edit_pending_order_path(@pending_order, token: @pending_order.edit_token), class: "link link-primary" %>
            to add different items.
          </p>
        </div>
      </div>
    <% end %>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-xl font-semibold text-gray-900">Order Items</h2>
      </div>

      <div class="divide-y divide-gray-200">
        <% @pending_order.items.each do |item| %>
          <div class="p-6 flex items-center space-x-4">
            <div class="flex-1">
              <h3 class="text-lg font-medium text-gray-900"><%= item["product_name"] %></h3>
              <p class="text-sm text-gray-500"><%= item["variant_name"] %></p>
            </div>

            <div class="text-center w-20">
              <p class="text-sm text-gray-500">Qty</p>
              <p class="text-lg font-medium text-gray-900"><%= item["quantity"] %></p>
            </div>

            <div class="text-center w-24">
              <p class="text-sm text-gray-500">Price</p>
              <p class="text-lg font-medium text-gray-900">&pound;<%= item["price"] %></p>
            </div>

            <div class="text-right w-28">
              <p class="text-sm text-gray-500">Total</p>
              <p class="text-lg font-semibold text-gray-900">&pound;<%= item["line_total"] %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-xl font-semibold text-gray-900">Order Summary</h2>
      </div>

      <div class="p-6 space-y-4">
        <div class="flex justify-between">
          <span class="text-gray-600">Subtotal</span>
          <span class="text-gray-900">&pound;<%= @pending_order.items_snapshot["subtotal"] %></span>
        </div>

        <div class="flex justify-between">
          <span class="text-gray-600">VAT (20%)</span>
          <span class="text-gray-900">&pound;<%= @pending_order.items_snapshot["vat"] %></span>
        </div>

        <div class="flex justify-between">
          <span class="text-gray-600">Shipping</span>
          <span class="text-gray-900">&pound;<%= @pending_order.items_snapshot["shipping"] %></span>
        </div>

        <div class="border-t pt-4">
          <div class="flex justify-between">
            <span class="text-lg font-semibold text-gray-900">Total</span>
            <span class="text-lg font-bold text-gray-900">&pound;<%= @pending_order.items_snapshot["total"] %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-xl font-semibold text-gray-900">Payment Method</h2>
      </div>

      <div class="p-6">
        <div class="flex items-center space-x-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
          </svg>
          <div>
            <p class="font-medium text-gray-900">
              <%= @schedule.card_brand&.capitalize || "Card" %> ending in <%= @schedule.card_last4 || "****" %>
            </p>
            <p class="text-sm text-gray-500">Your saved payment method will be charged when you confirm.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to "Edit Order",
          edit_pending_order_path(@pending_order, token: @pending_order.edit_token),
          class: "btn btn-outline btn-lg" %>
      <%= button_to "Confirm & Pay",
          confirm_pending_order_path(@pending_order, token: @pending_order.confirmation_token),
          method: :post,
          class: "btn btn-primary btn-lg" %>
    </div>

    <p class="text-center text-sm text-gray-500 mt-6">
      This is part of your <strong><%= @schedule.frequency.humanize.downcase %></strong> reorder schedule.
      <br>
      If you have questions, please <%= link_to "contact us", contact_path, class: "link link-primary" %>.
    </p>

  </div>
</div>
