<%# Account conversion form for guest checkout users %>
<%# Only shown when: order has no user AND user is not logged in %>

<div class="bg-gray-50 border border-gray-200 rounded-lg px-6 py-4 mb-6 shadow-sm">
  <h3 class="text-lg text-gray-800 text-center">Save your details for next time</h3>

  <%# Benefit cards %>
  <div class="flex flex-col sm:flex-row gap-3 mt-4">
    <div class="flex-1 bg-white rounded-lg p-3 text-center shadow-sm border border-gray-100">
      <div class="text-lg">âš¡</div>
      <div class="text-sm text-gray-800">Reorder in one click</div>
      <div class="text-xs text-gray-500">Skip the cart</div>
    </div>
    <div class="flex-1 bg-white rounded-lg p-3 text-center shadow-sm border border-gray-100">
      <div class="text-lg">ðŸ”„</div>
      <div class="text-sm text-gray-800">Auto-reorder monthly</div>
      <div class="text-xs text-gray-500">Never run out</div>
    </div>
    <div class="flex-1 bg-white rounded-lg p-3 text-center shadow-sm border border-gray-100">
      <div class="text-lg">ðŸ“‹</div>
      <div class="text-sm text-gray-800">Order history</div>
      <div class="text-xs text-gray-500">Easy tracking</div>
    </div>
  </div>

  <% if @email_already_registered %>
    <%# Email already has an account - show login link %>
    <div class="alert alert-warning mt-4">
      <span class="text-sm">
        An account with <%= order.email %> already exists.
        <%= link_to "Sign in", new_session_path, class: "font-medium underline" %>
        to link this order to your account.
      </span>
    </div>
  <% else %>
    <%= form_with url: post_checkout_registration_path, method: :post, class: "mt-4" do |f| %>
      <% if @user&.errors&.any? %>
        <div class="alert alert-error mb-4">
          <ul class="text-sm list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <p class="text-sm text-gray-600 mb-3">
        <span class="font-medium">Your email:</span> <%= order.email %>
      </p>

      <div class="flex flex-col sm:flex-row gap-3">
        <%= f.password_field :password,
            name: "user[password]",
            class: "input input-bordered flex-1",
            placeholder: "Choose a password (min. 8 characters)",
            required: true,
            minlength: 8,
            "aria-label": "Password" %>
        <%= f.submit "Create Account", class: "btn btn-primary whitespace-nowrap" %>
      </div>
    <% end %>
  <% end %>
</div>
