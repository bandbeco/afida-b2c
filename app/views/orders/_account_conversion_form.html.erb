<%# Account conversion form for guest checkout users %>
<%# Only shown when: order has no user AND user is not logged in %>

<div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <svg class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
    <div class="ml-4 flex-1">
      <h3 class="text-lg font-medium text-blue-800">Create an account</h3>
      <p class="mt-1 text-sm text-blue-600">Save your order history and reorder in seconds next time.</p>

      <% if @email_already_registered %>
        <%# Email already has an account - show login link %>
        <div class="mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded-md">
          <p class="text-sm text-yellow-800">
            An account with <strong><%= order.email %></strong> already exists.
            <%= link_to "Sign in", new_session_path, class: "font-medium text-yellow-800 underline hover:text-yellow-900" %>
            to link this order to your account.
          </p>
        </div>
      <% else %>
        <%= form_with url: post_checkout_registration_path, method: :post, class: "mt-4" do |f| %>
          <% if @user&.errors&.any? %>
            <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-md">
              <ul class="text-sm text-red-600 list-disc list-inside">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <p class="text-sm text-blue-600 mb-3">
            Your email: <strong><%= order.email %></strong>
          </p>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <%= f.label :password, class: "block text-sm font-medium text-gray-700" do %>
                Password <span class="font-normal text-gray-500">(min. 8 characters)</span>
              <% end %>
              <%= f.password_field :password,
                  name: "user[password]",
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                  placeholder: "Create a password",
                  required: true,
                  minlength: 8 %>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password_confirmation,
                  name: "user[password_confirmation]",
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                  placeholder: "Confirm your password",
                  required: true,
                  minlength: 8 %>
            </div>
          </div>

          <div class="mt-4">
            <%= f.submit "Create Account",
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>

          <p class="mt-3 text-xs text-blue-500">
            Benefits: View order history, reorder in one click, track deliveries
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
