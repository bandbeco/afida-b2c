<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">

    <%# Neutral Header - utilitarian view for past orders %>
    <div class="mb-8">
      <h1 class="text-gray-900">Order <%= @order.display_number %></h1>
      <p class="text-gray-600">Placed on <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>

    <!-- Order Details -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-gray-900">Order Details</h2>
      </div>

      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Order Number</h3>
            <p class="mt-1 text-gray-900"><%= @order.display_number %></p>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Order Date</h3>
            <p class="mt-1 text-lg text-gray-900"><%= @order.created_at.strftime("%B %d, %Y") %></p>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Status</h3>
            <span class="mt-1 inline-flex px-3 py-1 text-sm font-medium rounded-full bg-green-100 text-green-800">
              <%= @order.status.humanize %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Order Items -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-gray-900">Items Ordered</h2>
      </div>

      <div class="divide-y divide-gray-200">
        <% @order.order_items.each do |item| %>
          <div class="p-6 flex items-center space-x-4">
            <div class="relative flex-shrink-0">
              <%= product_photo_tag(item.product&.primary_photo, alt: item.product&.generated_title || "Product", class: "h-16 w-16 rounded-lg bg-white object-contain") %>
              <% if item.sample? %>
                <%= render "shared/sample_badge", size: :sm %>
              <% end %>
            </div>

            <div class="flex-1">
              <% if item.configured? %>
                <h3 class="text-gray-900"><%= link_to item.product.generated_title, branded_product_path(item.product) %></h3>
                <p class="text-sm text-gray-500">Custom branded with your design</p>
                <p class="text-sm text-gray-500">Quantity: <%= format_quantity_display(item) %></p>
              <% else %>
                <h3 class="text-gray-900"><%= link_to item.product.generated_title, product_path(item.product) %></h3>
                <p class="text-sm text-gray-500">SKU: <%= item.product.sku %></p>
                <p class="text-sm text-gray-500">Quantity: <%= format_quantity_display(item) %></p>
              <% end %>
            </div>

            <div class="text-right">
              <% if item.sample? %>
                <p class="text-lg font-medium text-primary">Free</p>
                <p class="text-sm text-gray-500">Sample</p>
              <% else %>
                <p class="text-lg font-medium text-gray-900">£<%= number_with_precision(item.line_total, precision: 2) %></p>
                <p class="text-sm text-gray-500"><%= format_price_display(item) %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Order Summary and Shipping -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

      <!-- Order Summary -->
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b">
          <h2 class="text-gray-900">Order Summary</h2>
        </div>

        <div class="p-6 space-y-4">
          <div class="flex justify-between">
            <span class="text-gray-600">Subtotal</span>
            <span class="text-gray-900">£<%= number_with_precision(@order.subtotal_amount, precision: 2) %></span>
          </div>

          <div class="flex justify-between">
            <span class="text-gray-600">VAT (20%)</span>
            <span class="text-gray-900">£<%= number_with_precision(@order.vat_amount, precision: 2) %></span>
          </div>

          <div class="flex justify-between">
            <span class="text-gray-600">Shipping</span>
            <span class="text-gray-900">£<%= number_with_precision(@order.shipping_amount, precision: 2) %></span>
          </div>

          <div class="border-t pt-4">
            <div class="flex justify-between">
              <span class="text-lg font-semibold text-gray-900">Total</span>
              <span class="text-lg font-semibold text-gray-900">£<%= number_with_precision(@order.total_amount, precision: 2) %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Shipping Information -->
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b">
          <h2 class="text-gray-900">Shipping Address</h2>
        </div>

        <div class="p-6">
          <div class="text-gray-900">
            <p class="font-medium"><%= @order.shipping_name %></p>
            <p><%= @order.shipping_address_line1 %></p>
            <% if @order.shipping_address_line2.present? %>
              <p><%= @order.shipping_address_line2 %></p>
            <% end %>
            <p><%= @order.shipping_city %>, <%= @order.shipping_postal_code %></p>
            <p><%= @order.shipping_country %></p>
          </div>

          <div class="mt-4 pt-4 border-t">
            <p class="text-sm text-gray-600">
              <strong>Email:</strong> <%= @order.email %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-8 flex flex-wrap justify-center gap-3">
      <% if authenticated? && Current.user&.id == @order.user_id %>
        <%= link_to reorder_order_path(@order), method: :post, class: "btn btn-secondary", data: { turbo_method: :post } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Reorder
        <% end %>

        <%= link_to setup_reorder_schedules_path(order_id: @order.id), class: "btn btn-primary" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Schedule
        <% end %>
      <% end %>

      <% if authenticated? %>
        <%= link_to "View All Orders", orders_path, class: "btn btn-outline" %>
      <% end %>
    </div>

  </div>
</div>