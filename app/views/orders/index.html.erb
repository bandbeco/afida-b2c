<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">

    <div class="mb-8">
      <h1 class="text-3xl">Your Orders</h1>
      <p class="mt-2 text-gray-600">View and track your recent purchases</p>
    </div>

    <% if @orders.any? %>
      <div class="space-y-6">
        <% @orders.each do |order| %>
          <article class="bg-white shadow-lg rounded-lg overflow-hidden" aria-label="Order <%= order.display_number %>" data-order-number="<%= order.display_number %>">
            <div class="px-6 py-4 bg-gray-50 border-b flex justify-between items-center">
              <div>
                <div class="flex items-center gap-2">
                  <h3 class="text-lg">Order <%= order.display_number %></h3>
                  <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full
                    <% case order.status %>
                    <% when 'pending' %>
                      bg-yellow-100 text-yellow-800
                    <% when 'paid' %>
                      bg-green-100 text-green-800
                    <% when 'processing' %>
                      bg-blue-100 text-blue-800
                    <% when 'shipped' %>
                      bg-purple-100 text-purple-800
                    <% when 'delivered' %>
                      bg-green-100 text-green-800
                    <% else %>
                      bg-gray-100 text-gray-800
                    <% end %>">
                    <%= order.status.humanize %>
                  </span>
                </div>
                <p class="text-sm text-gray-600">Placed on <%= order.created_at.strftime("%B %d, %Y") %></p>
              </div>

              <%= link_to order_path(order), class: "btn btn-ghost btn-sm btn-circle", title: "View Details" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            </div>

            <div class="p-6">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <p class="text-sm text-gray-600 mb-2">
                    <%= pluralize(order.line_items_count, 'item') %> • Total: £<%= number_with_precision(order.total_amount, precision: 2) %>
                  </p>

                  <div class="flex -space-x-2 mb-4">
                    <% order.order_items.limit(3).each do |item| %>
                      <%= product_photo_tag(item.product_variant&.primary_photo,
                                            variant: { resize_and_pad: [80, 80, { background: [255, 255, 255] }] },
                                            class: "h-10 w-10 object-contain rounded-full border-2 border-white bg-white",
                                            alt: item.product_name) %>
                    <% end %>

                    <% if order.order_items.count > 3 %>
                      <div class="h-10 w-10 bg-gray-100 rounded-full border-2 border-white flex items-center justify-center">
                        <span class="text-xs text-gray-600">+<%= order.order_items.count - 3 %></span>
                      </div>
                    <% end %>
                  </div>

                  <p class="text-sm text-gray-600">
                    Ship to: <%= order.shipping_name %>, <%= order.shipping_city %>
                  </p>
                </div>

                <div class="ml-6 flex flex-col sm:flex-row gap-2">
                  <%= link_to reorder_order_path(order), method: :post, class: "btn btn-secondary btn-sm", data: { turbo_method: :post } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    Order again now
                  <% end %>
                  <%= link_to setup_reorder_schedules_path(order_id: order.id), class: "btn btn-primary btn-sm" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Set up automatic deliveries
                  <% end %>
                </div>
              </div>
            </div>
          </article>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
        <h3 class="mt-2 text-sm">No orders yet</h3>
        <p class="mt-1 text-sm text-gray-500">Start shopping to see your orders here.</p>
        <div class="mt-6">
          <%= link_to "Start Shopping", root_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      </div>
    <% end %>

  </div>
</div> 