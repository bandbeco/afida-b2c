<%# GA4 E-commerce: purchase event - fires ONCE per order (atomic) %>
<% if @should_track_ga4 %>
  <% content_for :head do %>
    <script>
      <%= ecommerce_purchase_event(@order) %>
    </script>
  <% end %>
<% end %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">

    <%# Celebratory Header %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-8 mb-8 text-center">
      <svg class="h-16 w-16 text-green-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h1 class="text-3xl font-bold text-green-800 mb-2">Thank You for Your Order!</h1>
      <p class="text-green-600 text-lg">Order <%= @order.display_number %> has been confirmed</p>
      <p class="text-green-600 mt-2">A confirmation email has been sent to <strong><%= @order.email %></strong></p>
    </div>

    <%# What Happens Next %>
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-xl font-semibold text-gray-900">What Happens Next?</h2>
      </div>
      <div class="p-6">
        <ol class="space-y-4">
          <li class="flex items-start">
            <div class="flex-shrink-0 h-8 w-8 rounded-full bg-green-500 flex items-center justify-center text-white font-semibold">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div class="ml-4">
              <h4 class="font-medium text-gray-900">Order Confirmed</h4>
              <p class="text-gray-600">Your payment has been processed successfully</p>
            </div>
          </li>
          <li class="flex items-start">
            <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 font-semibold">2</div>
            <div class="ml-4">
              <h4 class="font-medium text-gray-900">Processing</h4>
              <p class="text-gray-600">We'll prepare your order within 1-2 business days</p>
            </div>
          </li>
          <li class="flex items-start">
            <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 font-semibold">3</div>
            <div class="ml-4">
              <h4 class="font-medium text-gray-900">Delivery</h4>
              <p class="text-gray-600">Your order will arrive in 3-5 business days</p>
            </div>
          </li>
        </ol>
      </div>
    </div>

    <%# Order Items %>
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-xl font-semibold text-gray-900">Items Ordered</h2>
      </div>

      <div class="divide-y divide-gray-200">
        <% @order.order_items.each do |item| %>
          <div class="p-6 flex items-center space-x-4">
            <div class="relative flex-shrink-0">
              <%= product_photo_tag(item.product_variant&.primary_photo, alt: item.product_variant&.display_name || "Product", class: "h-16 w-16 rounded-lg") %>
              <% if item.sample? %>
                <%= render "shared/sample_badge", size: :sm %>
              <% end %>
            </div>

            <div class="flex-1">
              <% if item.configured? %>
                <h3 class="text-lg font-medium text-gray-900"><%= item.product.name %></h3>
                <p class="text-sm text-gray-500">Custom branded with your design</p>
                <p class="text-sm text-gray-500">Quantity: <%= format_quantity_display(item) %></p>
              <% else %>
                <h3 class="text-lg font-medium text-gray-900"><%= item.product_variant.display_name %></h3>
                <p class="text-sm text-gray-500">SKU: <%= item.product_variant.sku %></p>
                <p class="text-sm text-gray-500">Quantity: <%= format_quantity_display(item) %></p>
              <% end %>
            </div>

            <div class="text-right">
              <% if item.sample? %>
                <p class="text-lg font-medium text-primary">Free</p>
                <p class="text-sm text-gray-500">Sample</p>
              <% else %>
                <p class="text-lg font-medium text-gray-900">£<%= number_with_precision(item.line_total, precision: 2) %></p>
                <p class="text-sm text-gray-500"><%= format_price_display(item) %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%# Order Summary and Shipping %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

      <%# Order Summary %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b">
          <h2 class="text-xl font-semibold text-gray-900">Order Summary</h2>
        </div>

        <div class="p-6 space-y-4">
          <div class="flex justify-between">
            <span class="text-gray-600">Subtotal</span>
            <span class="text-gray-900">£<%= number_with_precision(@order.subtotal_amount, precision: 2) %></span>
          </div>

          <div class="flex justify-between">
            <span class="text-gray-600">VAT (20%)</span>
            <span class="text-gray-900">£<%= number_with_precision(@order.vat_amount, precision: 2) %></span>
          </div>

          <div class="flex justify-between">
            <span class="text-gray-600">Shipping</span>
            <span class="text-gray-900">£<%= number_with_precision(@order.shipping_amount, precision: 2) %></span>
          </div>

          <div class="border-t pt-4">
            <div class="flex justify-between">
              <span class="text-lg font-semibold text-gray-900">Total</span>
              <span class="text-lg font-bold text-gray-900">£<%= number_with_precision(@order.total_amount, precision: 2) %></span>
            </div>
          </div>
        </div>
      </div>

      <%# Shipping Information %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b">
          <h2 class="text-xl font-semibold text-gray-900">Shipping Address</h2>
        </div>

        <div class="p-6">
          <div class="text-gray-900">
            <p class="font-medium"><%= @order.shipping_name %></p>
            <p><%= @order.shipping_address_line1 %></p>
            <% if @order.shipping_address_line2.present? %>
              <p><%= @order.shipping_address_line2 %></p>
            <% end %>
            <p><%= @order.shipping_city %>, <%= @order.shipping_postal_code %></p>
            <p><%= @order.shipping_country %></p>
          </div>

          <div class="mt-4 pt-4 border-t">
            <p class="text-sm text-gray-600">
              <strong>Email:</strong> <%= @order.email %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <%# Actions %>
    <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
      <%= link_to "Continue Shopping", root_path, class: "btn btn-primary" %>
      <%= link_to "View Order Details", order_details_path_for(@order), class: "btn btn-outline" %>
      <% if authenticated? %>
        <%= link_to "View All Orders", orders_path, class: "btn btn-outline" %>
      <% end %>
    </div>

  </div>
</div>
