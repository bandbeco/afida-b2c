<%# GA4 E-commerce: purchase event - fires ONCE per order (atomic) %>
<% if @should_track_ga4 %>
  <% content_for :head do %>
    <script>
      <%= ecommerce_purchase_event(@order) %>
    </script>
  <% end %>
<% end %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">

    <%# Progress Steps with integrated thank you %>
    <div class="bg-white rounded-lg overflow-hidden mb-8 p-6">
      <ul class="steps steps-vertical sm:steps-horizontal w-full">
        <li class="step step-success" data-content="✓">
          <div class="text-left sm:text-center mt-2 sm:mt-0">
            <h4 class="text-gray-900">Order <%= @order.display_number %></h4>
            <p class="text-sm text-gray-500">Received, thank you!</p>
          </div>
        </li>
        <li class="step" data-content="2">
          <div class="text-left sm:text-center mt-2 sm:mt-0">
            <h4 class="text-gray-900">Processing</h4>
            <p class="text-sm text-gray-500">1-2 business days</p>
          </div>
        </li>
        <li class="step" data-content="3">
          <div class="text-left sm:text-center mt-2 sm:mt-0">
            <h4 class="text-gray-900">Delivery</h4>
            <p class="text-sm text-gray-500">3-5 business days</p>
          </div>
        </li>
      </ul>
    </div>

    <%# Account Conversion Form (for guests only) %>
    <% if @order.user_id.blank? && !authenticated? %>
      <%= render "orders/account_conversion_form", order: @order %>
    <% end %>

    <%# Save Address Prompt (for logged-in users with new addresses) %>
    <% if authenticated? && Current.user && @order.user_id == Current.user.id %>
      <% unless Current.user.has_matching_address?(line1: @order.shipping_address_line1, postcode: @order.shipping_postal_code) %>
        <%= render "orders/save_address_prompt", order: @order %>
      <% end %>
    <% end %>

    <%# Reorder Schedule CTA (for authenticated users) %>
    <% if authenticated? && !@order.has_reorder_schedule? %>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 mb-8 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary mx-auto mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        <h3 class="text-lg mb-2">Need this order regularly?</h3>
        <p class="text-base-content/70 mb-4">Set up automatic reorders and never run out of supplies</p>
        <%= link_to "Set Up Reorder Schedule", setup_reorder_schedules_path(order_id: @order.id), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%# Order Items %>
    <div class="bg-white shadow-sm rounded-lg overflow-hidden mb-8">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-xl text-gray-900">Items Ordered</h2>
      </div>

      <div class="divide-y divide-gray-200">
        <% @order.order_items.each do |item| %>
          <div class="p-6 flex items-center space-x-4">
            <div class="relative flex-shrink-0">
              <%= product_photo_tag(item.product_variant&.primary_photo, alt: item.product_variant&.display_name || "Product", class: "h-16 w-16 rounded-lg bg-white object-contain") %>
              <% if item.sample? %>
                <%= render "shared/sample_badge", size: :sm %>
              <% end %>
            </div>

            <div class="flex-1">
              <% if item.configured? %>
                <h3 class="text-lg text-gray-900"><%= link_to item.product.name, branded_product_path(item.product) %></h3>
                <p class="text-sm text-gray-500">Custom branded with your design</p>
                <p class="text-sm text-gray-500">Quantity: <%= format_quantity_display(item) %></p>
              <% else %>
                <h3 class="text-lg text-gray-900"><%= link_to item.product_variant.display_name, product_path(item.product, item.product_variant.url_params) %></h3>
                <p class="text-sm text-gray-500">SKU: <%= item.product_variant.sku %></p>
                <p class="text-sm text-gray-500">Quantity: <%= format_quantity_display(item) %></p>
              <% end %>
            </div>

            <div class="text-right">
              <% if item.sample? %>
                <p class="text-lg text-primary">Free</p>
                <p class="text-sm text-gray-500">Sample</p>
              <% else %>
                <p class="text-lg text-gray-900">£<%= number_with_precision(item.line_total, precision: 2) %></p>
                <p class="text-sm text-gray-500"><%= format_price_display(item) %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%# Order Summary and Shipping %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

      <%# Order Summary %>
      <div class="bg-white shadow-sm rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b">
          <h2 class="text-xl text-gray-900">Order Summary</h2>
        </div>

        <div class="p-6 space-y-4">
          <div class="flex justify-between">
            <span class="text-gray-600">Subtotal</span>
            <span class="text-gray-900">£<%= number_with_precision(@order.subtotal_amount, precision: 2) %></span>
          </div>

          <div class="flex justify-between">
            <span class="text-gray-600">VAT (20%)</span>
            <span class="text-gray-900">£<%= number_with_precision(@order.vat_amount, precision: 2) %></span>
          </div>

          <div class="flex justify-between">
            <span class="text-gray-600">Shipping</span>
            <span class="text-gray-900">£<%= number_with_precision(@order.shipping_amount, precision: 2) %></span>
          </div>

          <div class="border-t pt-4">
            <div class="flex justify-between">
              <span class="text-lg text-gray-900">Total</span>
              <span class="text-lg text-gray-900">£<%= number_with_precision(@order.total_amount, precision: 2) %></span>
            </div>
          </div>
        </div>
      </div>

      <%# Shipping Information %>
      <div class="bg-white shadow-sm rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b">
          <h2 class="text-xl text-gray-900">Shipping Address</h2>
        </div>

        <div class="p-6">
          <div class="text-gray-900">
            <p><%= @order.shipping_name %></p>
            <p><%= @order.shipping_address_line1 %></p>
            <% if @order.shipping_address_line2.present? %>
              <p><%= @order.shipping_address_line2 %></p>
            <% end %>
            <p><%= @order.shipping_city %>, <%= @order.shipping_postal_code %></p>
            <p><%= @order.shipping_country %></p>
          </div>

          <div class="mt-4 pt-4 border-t">
            <p class="text-sm text-gray-600">
              Email: <%= @order.email %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <%# Actions %>
    <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
      <%= link_to "Continue Shopping", root_path, class: "btn btn-primary" %>
      <%= link_to "View Order Details", order_details_path_for(@order), class: "btn btn-outline" %>
      <% if authenticated? %>
        <%= link_to "View All Orders", orders_path, class: "btn btn-outline" %>
      <% end %>
    </div>

  </div>
</div>
