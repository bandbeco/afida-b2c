<%= turbo_stream.replace "cart_counter", partial: "shared/cart_counter" %>
<%= turbo_stream.replace "drawer_cart_content", partial: "shared/drawer_cart_content",
      locals: { notice: @sample_replaced ? "Sample replaced with regular item" : nil } %>

<% if @sample_replaced %>
  <%# Show toast notification for sample replacement (visible even if drawer is closed) %>
  <%= turbo_stream.append "toast-container" do %>
    <%= render "shared/toast", type: :info, message: "Sample replaced with regular item" %>
  <% end %>
<% end %>