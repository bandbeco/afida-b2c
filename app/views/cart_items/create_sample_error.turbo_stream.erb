<%# Turbo Stream response for sample add error %>

<% if @variant %>
  <%= turbo_stream.replace dom_id(@variant, :sample),
        partial: "samples/variant_card",
        locals: {
          variant: @variant,
          in_cart: @in_cart,
          at_limit: @at_limit,
          error: @error_message
        } %>
<% else %>
  <%# Variant not found - show flash message instead %>
  <%= turbo_stream.prepend "flash-messages" do %>
    <div class="alert alert-warning mb-4" data-controller="auto-dismiss" data-auto-dismiss-delay-value="5000">
      <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      <span><%= @error_message %></span>
    </div>
  <% end %>
<% end %>
