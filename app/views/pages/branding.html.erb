      <div class="hidden md:block absolute top-8 left-[16.67%] right-[16.67%] border-t-2 border-dashed border-neutral-300"></div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Step 1 -->
        <div class="relative">
          <div class="flex flex-col items-center text-center">
            <div class="w-16 h-16 rounded-full bg-[#79ebc0] border-2 border-black flex items-center justify-center mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] text-2xl font-black relative z-10">
              1
            </div>
            <h3>Design</h3>
            <p class="text-neutral-600">Upload your logo. Preview it in real time. Takes about as long as making a coffee.</p>
          </div>
        </div>

        <!-- Step 2 -->
        <div class="relative">
          <div class="flex flex-col items-center text-center">
            <div class="w-16 h-16 rounded-full bg-[#ffb7c5] border-2 border-black flex items-center justify-center mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] text-2xl font-black relative z-10">
              2
            </div>
            <h3>Order</h3>
            <p class="text-neutral-600">Add to cart. Check out. No quote requests. No "we'll get back to you." Just a price and a button.</p>
          </div>
        </div>

        <!-- Step 3 -->
        <div class="relative">
          <div class="flex flex-col items-center text-center">
            <div class="w-16 h-16 rounded-full bg-[#fef08a] border-2 border-black flex items-center justify-center mb-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] text-2xl font-black relative z-10">
              3
            </div>
            <h3>Receive</h3>
            <p class="text-neutral-600">Printed and delivered in 20 business days. Then watch your cups walk around town with your name on them.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center mt-12">
      <%= link_to branded_products_path, class: "btn btn-primary btn-lg shadow-lg shadow-black/20" do %>
        Start Branding
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      <% end %>
    </div>
  </div>
</section>

