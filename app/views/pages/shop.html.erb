<% content_for :title, "Shop Eco-Friendly Catering Supplies | Afida" %>

<% content_for :meta_description, "Browse our complete range of eco-friendly catering supplies. Filter by category, search products, and find exactly what you need. Sustainable packaging for your business." %>

<div class="container mx-auto px-4 py-8">
  <%= form_with url: shop_path, method: :get, data: { controller: "form", turbo_frame: "products", turbo_action: "replace" } do |f| %>
    <div class="flex flex-col md:flex-row gap-8">
      <!-- Filter Sidebar (Static - outside Turbo Frame) -->
      <aside class="w-full md:w-64 flex-shrink-0 space-y-6 md:mt-[7.5rem]">
        <!-- Category Filter (shown when not searching) -->
        <% if params[:q].blank? %>
          <div>
            <h2 class="font-semibold text-lg mb-3 pb-2 border-b">Product Types</h2>

            <% @categories.each do |category| %>
              <label class="flex items-center gap-2 mb-2 cursor-pointer">
                <%= check_box_tag 'categories[]', category.slug, (params[:categories] || []).include?(category.slug), class: "checkbox checkbox-primary", data: { action: "change->form#submit" } %>
                <span><%= category.name %> (<%= category.products_count %>)</span>
              </label>
            <% end %>
          </div>
        <% end %>

        <!-- Reset Filters Button -->
        <div class="mt-4">
          <%= link_to "Reset Filters", shop_path, class: "btn btn-outline w-full" %>
        </div>
      </aside>

      <!-- Main Content Area -->
      <div class="flex-1 min-w-0 min-h-[60vh]">
        <!-- Title Row -->
        <div class="mb-6">
          <h1 class="text-3xl font-bold">Shop all products</h1>
        </div>

        <!-- Search and Sort Row (aligned horizontally) -->
        <div class="flex items-center gap-4 mb-8">
          <!-- Search Bar -->
          <div class="flex-grow">
            <%= text_field_tag :q, params[:q], placeholder: "Search all products...", class: "input input-bordered w-full", data: { controller: "search", action: "input->search#debounce" } %>
          </div>

          <!-- Sort Dropdown - Hidden on mobile -->
          <div class="hidden lg:flex items-center gap-2 flex-shrink-0">
            <label for="sort" class="text-sm font-medium">Sort:</label>
            <%= select_tag :sort, options_for_select([
              ["Default", ""],
              ["Price: Low to High", "price_asc"],
              ["Price: High to Low", "price_desc"],
              ["Name: A-Z", "name_asc"],
              ["Name: Z-A", "name_desc"]
            ], params[:sort]), class: "select select-bordered select-sm", data: { action: "change->form#submit" } %>
          </div>
        </div>

        <!-- Product Grid (inside Turbo Frame) -->
        <%= turbo_frame_tag "products", data: { turbo_action: "replace" } do %>
          <% if @products.any? %>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
              <% @products.each do |product| %>
                <%= render 'products/card', product: product %>
              <% end %>
            </div>

            <!-- Pagination -->
            <% if @pagy.pages > 1 %>
              <div class="flex justify-center">
                <nav class="join" aria-label="Pagination">
                  <%== @pagy.series_nav(classes: 'join-item btn btn-sm') %>
                </nav>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-12">
              <p class="text-xl text-gray-600 mb-4">No products found.</p>
              <%= link_to "Clear Filters", shop_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
