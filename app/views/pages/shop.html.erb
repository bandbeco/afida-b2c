<% content_for :title, "Shop Eco-Friendly Catering Supplies | Afida" %>

<% content_for :meta_description, "Browse our complete range of eco-friendly catering supplies. Filter by category, search products, and find exactly what you need. Sustainable packaging for your business." %>

<div class="drawer drawer-end">
  <input id="cart-drawer" type="checkbox" class="drawer-toggle" aria-label="Toggle shopping cart" />
  <div class="drawer-content">
    <div class="container mx-auto px-4 py-8">
  <%= form_with url: shop_path, method: :get, data: { controller: "form", turbo_frame: "products", turbo_action: "replace" } do |f| %>
    <div class="flex flex-col md:flex-row gap-8">
      <!-- Filter Sidebar (Static - outside Turbo Frame) -->
      <aside class="w-full md:w-64 flex-shrink-0 space-y-6 md:mt-[7.5rem]">
        <!-- Category Filter (shown when not searching) -->
        <% if params[:q].blank? %>
          <div>
            <div class="font-semibold text-lg mb-3 pb-2 border-b">Product Types</div>

            <% @categories.each do |category| %>
              <label for="category_<%= category.slug %>" class="flex items-center gap-2 mb-2 cursor-pointer">
                <%= check_box_tag 'categories[]', category.slug, (params[:categories] || []).include?(category.slug), id: "category_#{category.slug}", class: "checkbox checkbox-primary", aria: { label: "Filter by #{category.name}" }, data: { action: "change->form#submit" } %>
                <span><%= category.name %> (<%= @category_variant_counts[category.id] || 0 %>)</span>
              </label>
            <% end %>
          </div>
        <% end %>

        <!-- Option Filters (Size, Colour, Material) -->
        <%= render "shared/filters" %>

        <!-- Reset Filters Button -->
        <div class="mt-4">
          <%= link_to "Reset Filters", shop_path, class: "btn btn-outline w-full" %>
        </div>
      </aside>

      <!-- Main Content Area -->
      <div class="flex-1 min-w-0 min-h-[60vh]">
        <!-- Title Row -->
        <div class="mb-6">
          <h1>Shop all products</h1>
        </div>

        <!-- Search and Sort Row (aligned horizontally) -->
        <div class="flex items-center gap-4 mb-8">
          <!-- Search Bar -->
          <div class="flex-grow">
            <%= label_tag :q, "Search products", class: "sr-only" %>
            <%= text_field_tag :q, params[:q], placeholder: "Search all products...", class: "input input-bordered w-full", aria: { label: "Search products by name, SKU, or colour" }, data: { controller: "search", action: "input->search#debounce" } %>
          </div>

          <!-- Sort Dropdown - Hidden on mobile -->
          <div class="hidden lg:flex items-center gap-2 flex-shrink-0">
            <%= label_tag :sort, "Sort:", class: "text-sm font-medium" %>
            <%= select_tag :sort, options_for_select([
              ["Default", ""],
              ["Price: Low to High", "price_asc"],
              ["Price: High to Low", "price_desc"],
              ["Name: A-Z", "name_asc"],
              ["Name: Z-A", "name_desc"]
            ], params[:sort]), class: "select select-bordered select-sm", aria: { label: "Sort products" }, data: { action: "change->form#submit" } %>
          </div>
        </div>

        <!-- Variant Grid (inside Turbo Frame) -->
        <%= turbo_frame_tag "products", data: { turbo_action: "replace" } do %>
          <% if @variants.any? %>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
              <%= render partial: "products/variant_card", collection: @variants, as: :variant %>
            </div>

            <!-- Pagination -->
            <% if @pagy.pages > 1 %>
              <div class="flex justify-center">
                <nav class="join" aria-label="Pagination">
                  <%== @pagy.series_nav(classes: 'join-item btn btn-sm') %>
                </nav>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-12">
              <p class="text-xl text-gray-600 mb-4">No products found.</p>
              <%= link_to "Clear Filters", shop_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
    </div>
  </div>

  <div class="drawer-side">
    <label for="cart-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <div class="bg-base-200 text-base-content h-full w-80 p-4 flex flex-col">
      <%= render "shared/drawer_cart_content" %>
    </div>
  </div>
</div>
