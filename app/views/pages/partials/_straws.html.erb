<!-- Featured Product -->
<section class="py-4 sm:py-6">
  <div class="container mx-auto px-4">
    <div class="bg-neutral-900 text-white overflow-hidden rounded-3xl py-16 px-8 sm:px-12 relative">
      <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 30px 30px;"></div>
      <div class="relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
          <div class="order-2 md:order-1">
            <div class="mb-8">
              <%= vite_image_tag "images/ecomaniacs-logo.svg", alt: "Eco Maniacs", class: "w-64 brightness-0 invert" %>
            </div>
            <h2 class="mb-6 text-[#79ebc0] font-semibold">BIO FIBRE STRAWS</h2>
            <p class="text-lg text-gray-300 mb-8 leading-relaxed">
              100% biodegradable. Strong as plastic. Won't go soggy in your drink. The paper straw era is over.
            </p>

            <div class="flex flex-col gap-6">
              <div class="flex items-start gap-4">
                <div>
                  <h3 class="mb-2 font-semibold">Fully Biodegradable</h3>
                  <p class="text-lg text-gray-300">Made from bio fibre. Decomposes after use. Doesn't decompose during use. Important distinction.</p>
                </div>
              </div>
            </div>

            <div class="mt-10">
              <% if @featured_straw_product.present? %>
                <%= link_to product_path(@featured_straw_product), class: "btn btn-primary btn-lg" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                  Shop Bio Fibre Straws
                <% end %>
              <% else %>
                <%= link_to category_path("straws"), class: "btn btn-primary btn-lg" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                  Shop Straws
                <% end %>
              <% end %>
            </div>
          </div>

          <div class="order-1 md:order-2 relative">
            <div class="aspect-square bg-white/5 rounded-3xl border border-white/10 flex items-center justify-center overflow-hidden backdrop-blur-sm p-8">
              <%= vite_image_tag "images/bambigga.webp", alt: "Bambigga Bio Fibre Straws", class: "w-full h-full object-contain drop-shadow-2xl transform hover:scale-110 transition-transform duration-500" %>
            </div>
            <!-- Decorative circle -->
            <div class="absolute -top-10 -right-10 w-32 h-32 bg-[#79ebc0] rounded-full blur-3xl opacity-20"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
