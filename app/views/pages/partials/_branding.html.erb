<!-- Branding Section -->
<section class="py-4 sm:py-6 lg:py-8" id="branding">
  <div class="container mx-auto px-4">
    <div class="bg-[#ffb7c5] rounded-3xl py-12 sm:py-16 px-6 sm:px-8 lg:px-12">

      <!-- Photo Collage -->
      <% collage = branding_collage_images %>
      <div class="grid grid-cols-4 md:grid-cols-6 grid-rows-5 gap-2 sm:gap-3 mb-10 sm:mb-12 h-[500px] sm:h-[550px] md:h-[600px]">
        <% if collage %>
          <%# Dynamic collage from admin-uploaded branding images %>
          <% grid_classes = [
            "col-span-2 row-span-5",
            "col-span-2 row-span-2",
            "hidden md:block col-span-2 row-span-5",
            "col-span-2 row-span-3"
          ] %>
          <% collage.each_with_index do |branding_image, i| %>
            <div class="<%= grid_classes[i] %> group overflow-hidden rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
              <%= image_tag branding_image.image, alt: branding_image.alt_text,
                  class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
            </div>
          <% end %>
        <% else %>
          <%# Static fallback images %>
          <div class="col-span-2 row-span-5 group overflow-hidden rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <%= vite_image_tag "images/branding/DSC_6621.webp",
                alt: "Shakedown branded coffee cup",
                class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
          </div>
          <div class="col-span-2 row-span-2 group overflow-hidden rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <%= vite_image_tag "images/branding/DSC_6736.webp",
                alt: "OOO Koffee branded cup",
                class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
          </div>
          <div class="hidden md:block col-span-2 row-span-5 group overflow-hidden rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <%= vite_image_tag "images/branding/DSC_6770.webp",
                alt: "La Gelatiera branded gelato cup",
                class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
          </div>
          <div class="col-span-2 row-span-3 group overflow-hidden rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
            <%= vite_image_tag "images/branding/DSC_6898.webp",
                alt: "Branded cup detail",
                class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
          </div>
        <% end %>
      </div>

      <!-- Content Card (headline, badges, CTA) -->
      <div class="pattern-bg pattern-bg-white pattern-visible rounded-2xl border-2 border-black shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] p-6 sm:p-8 lg:p-10 max-w-6xl mx-auto">
        <!-- Headline (US2) -->
        <div class="text-center mb-6">
          <h2>
            Brand is who you are.<br>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00a86b] to-[#79ebc0]">Branding is how you show up.</span>
          </h2>
        </div>

        <!-- Supporting Text -->
        <p class="text-center text-lg sm:text-xl text-black/80 mb-8 max-w-2xl mx-auto">
          Stand out with custom-branded packaging that turns every coffee cup or pizza box into a walking ad for your business.<br><br>
        </p>

        <!-- Trust Badges -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
          <!-- Low MOQs -->
          <div class="p-5 rounded-2xl bg-[#e6f9f1] border border-neutral-200">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-[#79ebc0] flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
              <div>
                <h3>Low MOQs</h3>
                <p class="text-sm text-neutral-600">Start with quantities that make sense for your business. As low as 1,000 units on some products.</p>
              </div>
            </div>
          </div>

          <!-- High Quality Printing -->
          <div class="p-5 rounded-2xl bg-[#fef9c3] border border-neutral-200">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-[#fef08a] flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" />
                </svg>
              </div>
              <div>
                <h3>High Quality Printing</h3>
                <p class="text-sm text-neutral-600">Crisp, vibrant prints that make your brand stand out. Your logo deserves to look its best.</p>
              </div>
            </div>
          </div>

          <!-- Free Storage -->
          <div class="p-5 rounded-2xl bg-[#fce7eb] border border-neutral-200">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-[#ffb7c5] flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                </svg>
              </div>
              <div>
                <h3>Free Storage</h3>
                <p class="text-sm text-neutral-600">We store your stock for free. Order in bulk and request deliveries as you need them.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA Button -->
        <div class="text-center">
          <%= link_to branded_products_path, class: "btn btn-primary btn-lg shadow-lg shadow-black/20" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
            Start Branding
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
