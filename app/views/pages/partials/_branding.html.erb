<!-- Branding Section -->
<section class="py-8 sm:py-12 lg:py-16" id="branding">
  <div class="container mx-auto px-4">
    <div class="bg-[#ffb7c5] rounded-3xl py-12 sm:py-16 px-6 sm:px-8 lg:px-12">

      <!-- Photo Collage (US1) -->
      <div class="columns-2 md:columns-3 gap-3 mb-10 sm:mb-12">
        <!-- Photo 1: Shakedown cup -->
        <div class="break-inside-avoid mb-3 group">
          <%= vite_image_tag "images/branding/DSC_6621.webp",
              alt: "Shakedown branded coffee cup",
              class: "w-full rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] group-hover:scale-105 transition-transform duration-300" %>
        </div>

        <!-- Photo 2: OOO Koffee -->
        <div class="break-inside-avoid mb-3 group">
          <%= vite_image_tag "images/branding/DSC_6736.webp",
              alt: "OOO Koffee branded cup",
              class: "w-full rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] group-hover:scale-105 transition-transform duration-300" %>
        </div>

        <!-- Photo 3: La Gelatiera mint -->
        <div class="break-inside-avoid mb-3 group">
          <%= vite_image_tag "images/branding/DSC_6770.webp",
              alt: "La Gelatiera branded gelato cup",
              class: "w-full rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] group-hover:scale-105 transition-transform duration-300" %>
        </div>

        <!-- Photo 4: Multiple cups -->
        <div class="break-inside-avoid mb-3 group">
          <%= vite_image_tag "images/branding/DSC_6872.webp",
              alt: "Collection of branded cups",
              class: "w-full rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] group-hover:scale-105 transition-transform duration-300" %>
        </div>

        <!-- Photo 5: Pastel cups display -->
        <div class="break-inside-avoid mb-3 group">
          <%= vite_image_tag "images/branding/DSC_7193.webp",
              alt: "La Gelatiera branded cups display",
              class: "w-full rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] group-hover:scale-105 transition-transform duration-300" %>
        </div>

        <!-- Photo 6: Gelato cups with gelato -->
        <div class="break-inside-avoid mb-3 group">
          <%= vite_image_tag "images/branding/DSC_7239.webp",
              alt: "Branded gelato cups with gelato",
              class: "w-full rounded-xl border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] group-hover:scale-105 transition-transform duration-300" %>
        </div>
      </div>

      <!-- Headline (US2) -->
      <div class="text-center mb-6">
        <h2 class="text-4xl sm:text-5xl font-black text-black leading-tight">
          Your Brand.<br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00a86b] to-[#79ebc0]">
            Your Cup.
          </span>
        </h2>
      </div>

      <!-- Supporting Text (US2) -->
      <p class="text-center text-lg sm:text-xl text-black/80 mb-8 max-w-2xl mx-auto">
        No setup fees. UK production. Delivered in 20 business days.
      </p>

      <!-- Trust Badges (US2) -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-4 mb-10 max-w-4xl mx-auto">
        <!-- UK Production -->
        <div class="flex flex-col items-center text-center p-3 sm:p-4 rounded-xl bg-[#79ebc0]/20 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          <div class="text-2xl sm:text-3xl mb-1">ðŸ‡¬ðŸ‡§</div>
          <span class="text-xl sm:text-2xl font-black">UK</span>
          <span class="text-xs text-neutral-600">Production</span>
        </div>

        <!-- Minimum Order -->
        <div class="flex flex-col items-center text-center p-3 sm:p-4 rounded-xl bg-[#ffb7c5]/30 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          <div class="mb-1">
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sm:w-8 sm:h-8"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" y1="22.08" x2="12" y2="12"/></svg>
          </div>
          <span class="text-xl sm:text-2xl font-black">1,000</span>
          <span class="text-xs text-neutral-600">Minimum units</span>
        </div>

        <!-- Turnaround -->
        <div class="flex flex-col items-center text-center p-3 sm:p-4 rounded-xl bg-[#fef08a]/40 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          <div class="mb-1">
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sm:w-8 sm:h-8"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          </div>
          <span class="text-xl sm:text-2xl font-black">20 days</span>
          <span class="text-xs text-neutral-600">Turnaround</span>
        </div>

        <!-- Setup Fees -->
        <div class="flex flex-col items-center text-center p-3 sm:p-4 rounded-xl bg-[#c4b5fd]/30 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          <div class="mb-1">
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sm:w-8 sm:h-8"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
