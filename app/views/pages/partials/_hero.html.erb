<section aria-label="Hero banner">
<div class="w-screen relative left-[50%] right-[50%] -mx-[50vw] bg-white overflow-hidden">
  <div class="container mx-auto px-4 py-12 lg:py-16">
    <div class="grid grid-cols-1 lg:grid-cols-[1.2fr_1fr] gap-0 items-center">
      <div class="w-full text-center lg:text-left">
        <h1 class="font-semibold !text-4xl lg:!text-5xl xl:!text-6xl" data-controller="slide-in">
          <span data-slide-in-target="item">Quality packaging supplies</span><br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00a86b] to-[#79ebc0]" data-slide-in-target="item">Delivered Fast</span>
        </h1>

        <p class="text-lg text-neutral-600 mb-8 leading-relaxed">
          Supply your restaurant, café, or takeaway with high-quality packaging.<br>
          From custom branded cups to bamboo pulp straws, we deliver everything<br>
          you need within 48 hours.
        </p>

        <div class="flex flex-wrap justify-center lg:justify-start gap-3 sm:gap-6 mb-8 sm:mb-16">
          <!-- Free Delivery Badge -->
          <div class="flex items-center gap-2">
            <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-[#00a86b] flex-shrink-0"><path d="M10 16V9.5a1 1 0 0 1 5 0"/><path d="M8 12h4"/><path d="M8 16h7"/><circle cx="12" cy="12" r="10"/></svg>
            <span class="text-base text-neutral-700">Free delivery on orders over £100 <span class="text-sm text-neutral-500">(excl. VAT)</span></span>
          </div>

          <!-- 48-hour Delivery Badge -->
          <div class="flex items-center gap-2">
            <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-[#00a86b] flex-shrink-0">
              <path d="M13 16a3 3 0 0 1 2.24 5"/>
              <path d="M18 12h.01"/>
              <path d="M18 21h-8a4 4 0 0 1-4-4 7 7 0 0 1 7-7h.2L9.6 6.4a1 1 0 1 1 2.8-2.8L15.8 7h.2c3.3 0 6 2.7 6 6v1a2 2 0 0 1-2 2h-1a3 3 0 0 0-3 3"/>
              <path d="M20 8.54V4a2 2 0 1 0-4 0v3"/>
              <path d="M7.612 12.524a3 3 0 1 0-1.6 4.3"/>
            </svg>
            <span class="text-base text-neutral-700">Order by 2pm for next-day delivery</span>
          </div>
        </div>

        <div class="flex flex-col lg:flex-row justify-center lg:justify-start gap-4">
          <%= link_to shop_path, class: "btn btn-primary btn-lg shadow-lg shadow-black/20" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
            Shop Products
          <% end %>
          <%= link_to samples_path, class: "btn btn-outline btn-lg border-2 border-neutral-800 hover:bg-neutral-800 hover:text-white" do %>
            Order Your Free Samples
          <% end %>
        </div>

        <div class="mt-8 mb-12 flex flex-col items-center lg:items-start gap-1.5 text-sm text-neutral-600">
          <div class="pl-1">
            <%= render "shared/gbp_badge", variant: :homepage %>
          </div>
          <div class="flex items-center gap-2">
            <div class="flex -space-x-2">
              <%# Exclude the-grove.webp from hero avatars to keep visual balance (10 logos fit better in small avatar circles) %>
              <% @client_logos.reject { |logo| logo == "the-grove.webp" }.first(8).each do |logo| %>
                <div class="w-8 h-8 rounded-full bg-gray-200 border-2 border-white">
                  <%= vite_image_tag "images/logos/#{logo}", alt: "#{logo.split('.').first.titleize}", class: "w-full h-full object-contain" %>
                </div>
              <% end %>
            </div>
            <span class="">Trusted by 500+ UK businesses</span>
          </div>
        </div>
      </div>

      <div class="flex justify-center lg:justify-start">
        <div class="relative w-full max-w-md lg:max-w-none">
          <%= vite_image_tag "images/hero/hero-main.jpg",
              alt: "Eco-friendly packaging products including paper bags, cups, food containers, and cutlery",
              class: "w-auto max-h-[750px]" %>
        </div>
      </div>
    </div>
  </div>
</div>
</section>