<% content_for :title, "Delivery & Returns | Afida" %>

<% content_for :meta_description, "Free next working day delivery on orders over £100. Learn about our delivery options, returns policy, and how to arrange a return at Afida." %>

<div class="bg-gray-50 min-h-screen">
  <!-- Header -->
  <div class="bg-white border-b">
    <div class="container mx-auto px-4 py-12 max-w-4xl">
      <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-3">Delivery & Returns</h1>
      <p class="text-gray-600">Everything you need to know about shipping and returns</p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Delivery Highlights -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm text-center">
        <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900 mb-1">Free Delivery</h3>
        <p class="text-sm text-gray-600">On orders over £100 (ex. VAT)</p>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm text-center">
        <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900 mb-1">Next Working Day</h3>
        <p class="text-sm text-gray-600">Order by 2pm Mon-Fri</p>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm text-center">
        <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900 mb-1">Hassle-Free Returns</h3>
        <p class="text-sm text-gray-600">Within 7 days of delivery</p>
      </div>
    </div>

    <!-- Quick Navigation -->
    <nav class="bg-white border border-gray-200 rounded-lg p-6 mb-8 shadow-sm">
      <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">Contents</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm">
        <a href="#delivery" class="text-gray-600 hover:text-primary">1. Delivery Information</a>
        <a href="#tracking" class="text-gray-600 hover:text-primary">2. Order Tracking</a>
        <a href="#returns" class="text-gray-600 hover:text-primary">3. Returns Policy</a>
        <a href="#how-to-return" class="text-gray-600 hover:text-primary">4. How to Arrange a Return</a>
        <a href="#faulty" class="text-gray-600 hover:text-primary">5. Faulty Goods</a>
        <a href="#branded" class="text-gray-600 hover:text-primary">6. Branded Products</a>
        <a href="#tolerance" class="text-gray-600 hover:text-primary">7. Production Tolerance</a>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
      <!-- Section 1: Delivery -->
      <section id="delivery" class="p-6 lg:p-8 border-b border-gray-100">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">1. Delivery Information</h2>

        <div class="space-y-6">
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Free Next Working Day Delivery</h3>
            <p class="text-gray-600 text-sm">We provide free next working day delivery for all orders over £100 (excluding VAT). Simply place your order by 2pm, Monday to Friday, to take advantage of next working day delivery.</p>
            <p class="text-gray-500 text-sm mt-2 italic">Please note that delivery times may be slightly longer during peak periods.</p>
          </div>

          <div>
            <h3 class="font-medium text-gray-900 mb-3">Delivery Options</h3>
            <div class="overflow-x-auto">
              <table class="w-full text-sm">
                <thead>
                  <tr class="border-b border-gray-200">
                    <th class="text-left py-3 pr-4 font-medium text-gray-900">Order Value</th>
                    <th class="text-left py-3 pr-4 font-medium text-gray-900">Delivery</th>
                    <th class="text-left py-3 font-medium text-gray-900">Cost</th>
                  </tr>
                </thead>
                <tbody class="text-gray-600">
                  <tr class="border-b border-gray-100">
                    <td class="py-3 pr-4">Over £100 (ex. VAT)</td>
                    <td class="py-3 pr-4">Next working day</td>
                    <td class="py-3 font-medium text-primary">Free</td>
                  </tr>
                  <tr>
                    <td class="py-3 pr-4">Under £100 (ex. VAT)</td>
                    <td class="py-3 pr-4">Next working day</td>
                    <td class="py-3">£6.99</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <div>
            <h3 class="font-medium text-gray-900 mb-2">Dispatch Times</h3>
            <p class="text-gray-600 text-sm">We aim to dispatch every order received before 2pm (Monday to Friday) on the same day. Unless otherwise specified, your order will be sent using our next working day service.</p>
          </div>

          <div>
            <h3 class="font-medium text-gray-900 mb-2">Delivery Area</h3>
            <p class="text-gray-600 text-sm">We currently deliver to addresses within the United Kingdom only.</p>
          </div>

          <div>
            <h3 class="font-medium text-gray-900 mb-2">Courier</h3>
            <p class="text-gray-600 text-sm">All orders are shipped via DPD, one of the UK's leading parcel delivery services.</p>
          </div>
        </div>
      </section>

      <!-- Section 2: Tracking -->
      <section id="tracking" class="p-6 lg:p-8 border-b border-gray-100">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">2. Order Tracking</h2>
        <p class="text-gray-600">You will receive a notification by email and/or text once your order has been dispatched. This notification will include your tracking information so you can follow your delivery every step of the way.</p>
      </section>

      <!-- Section 3: Returns Policy -->
      <section id="returns" class="p-6 lg:p-8 border-b border-gray-100">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">3. Returns Policy</h2>

        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
          <p class="text-green-800 text-sm font-medium">We operate a hassle-free returns policy. If you are not completely satisfied with your purchase, or if any item is faulty, we will gladly refund or replace it.</p>
        </div>

        <div class="space-y-6">
          <div>
            <h3 class="font-medium text-gray-900 mb-3">Returns at a Glance</h3>
            <div class="overflow-x-auto">
              <table class="w-full text-sm">
                <thead>
                  <tr class="border-b border-gray-200">
                    <th class="text-left py-3 pr-4 font-medium text-gray-900">Scenario</th>
                    <th class="text-left py-3 pr-4 font-medium text-gray-900">Return Window</th>
                    <th class="text-left py-3 pr-4 font-medium text-gray-900">Condition</th>
                    <th class="text-left py-3 pr-4 font-medium text-gray-900">Refund</th>
                    <th class="text-left py-3 font-medium text-gray-900">Shipping</th>
                  </tr>
                </thead>
                <tbody class="text-gray-600">
                  <tr class="border-b border-gray-100">
                    <td class="py-3 pr-4 font-medium text-gray-900">Standard return</td>
                    <td class="py-3 pr-4">7 days</td>
                    <td class="py-3 pr-4">Unopened, undamaged</td>
                    <td class="py-3 pr-4">Full refund minus 20% restocking fee</td>
                    <td class="py-3">Customer pays</td>
                  </tr>
                  <tr class="border-b border-gray-100">
                    <td class="py-3 pr-4 font-medium text-gray-900">Faulty / defective</td>
                    <td class="py-3 pr-4">7 days</td>
                    <td class="py-3 pr-4">Any condition</td>
                    <td class="py-3 pr-4 font-medium text-primary">Full refund</td>
                    <td class="py-3 font-medium text-primary">Free (we collect)</td>
                  </tr>
                  <tr>
                    <td class="py-3 pr-4 font-medium text-gray-900">Branded / custom</td>
                    <td class="py-3 pr-4 text-gray-500">—</td>
                    <td class="py-3 pr-4 text-gray-500">—</td>
                    <td class="py-3 pr-4 text-amber-600">Non-refundable*</td>
                    <td class="py-3 text-gray-500">—</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <p class="text-xs text-gray-500 mt-2">* Branded products can be refunded before artwork approval. See <a href="#branded" class="text-primary hover:underline">Section 6</a> for details.</p>
          </div>

          <div>
            <h3 class="font-medium text-gray-900 mb-2">Eligibility for Standard Returns</h3>
            <p class="text-gray-600 text-sm">Returns of non-faulty goods are at our discretion. To be eligible, items must be unopened, undamaged, and in the same condition as sent from our warehouse.</p>
          </div>

          <div>
            <h3 class="font-medium text-gray-900 mb-2">Return Shipping</h3>
            <p class="text-gray-600 text-sm">For standard returns, customers are responsible for return shipping costs. We recommend using a recorded or signed-for service. Afida cannot accept responsibility for items lost in transit.</p>
          </div>
        </div>
      </section>

      <!-- Section 4: How to Return -->
      <section id="how-to-return" class="p-6 lg:p-8 border-b border-gray-100">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">4. How to Arrange a Return</h2>

        <div class="space-y-6">
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Step 1: Contact Us</h3>
            <p class="text-gray-600 text-sm">To discuss a return, please contact us directly at <a href="mailto:hello@afida.com" class="text-primary hover:underline font-medium">hello@afida.com</a>.</p>
          </div>

          <div>
            <h3 class="font-medium text-gray-900 mb-2">Step 2: Send Your Return</h3>
            <p class="text-gray-600 text-sm mb-3">Once approved, please return items to:</p>
            <address class="not-italic bg-gray-50 rounded-lg p-4 text-sm text-gray-700">
              <strong class="text-gray-900">Afida</strong><br>
              Unit 27, The Metro Centre<br>
              Dwight Rd, Northwood<br>
              Watford WD18 9SB<br>
              United Kingdom
            </address>
          </div>

          <div>
            <h3 class="font-medium text-gray-900 mb-2">Step 3: Refund Processing</h3>
            <p class="text-gray-600 text-sm">Once the returned goods are received and checked, we will issue a credit note or refund.</p>
          </div>

          <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
            <h3 class="font-medium text-amber-800 mb-2">Important Notes</h3>
            <ul class="text-amber-700 text-sm space-y-1">
              <li>• Returns are accepted within 7 days of delivery</li>
              <li>• We cannot schedule specific timed collections</li>
              <li>• Any charges for failed collections due to customer unavailability or business closure will still apply</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Section 5: Faulty Goods -->
      <section id="faulty" class="p-6 lg:p-8 border-b border-gray-100">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">5. Faulty Goods</h2>

        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
          <p class="text-blue-800 text-sm font-medium">For any faulty or defective items, we will provide a full refund or replacement.</p>
        </div>

        <div class="space-y-4">
          <p class="text-gray-600 text-sm">If you receive faulty or defective items, please notify us in writing within 7 days of delivery.</p>

          <p class="text-gray-600 text-sm">After receiving your notification, we will arrange collection of the faulty goods and process your refund or replacement promptly.</p>

          <p class="text-gray-600 text-sm">Contact us at <a href="mailto:hello@afida.com" class="text-primary hover:underline font-medium">hello@afida.com</a> with details of the fault and your order number.</p>
        </div>
      </section>

      <!-- Section 6: Branded Products -->
      <section id="branded" class="p-6 lg:p-8 border-b border-gray-100">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">6. Branded & Custom Products</h2>

        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-4">
          <p class="text-amber-800 text-sm font-medium">Important: Custom and branded products cannot be returned or refunded once artwork has been approved.</p>
        </div>

        <div class="space-y-4">
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Refund Policy</h3>
            <p class="text-gray-600 text-sm">At Afida, we love making your packaging dreams a reality—and we think you'll love the results! But if you have a change of heart, don't worry. There's a small window between placing your order and approving the artwork where we can hit pause and organise a refund.</p>
            <p class="text-gray-600 text-sm mt-2">Once you've given the green light on the artwork, though, your packaging is officially in production, and printing will be underway—so we won't be able to offer a refund after that point. Think of it as your personal "seal of approval" moment before your designs come to life!</p>
          </div>

          <div>
            <h3 class="font-medium text-gray-900 mb-2">Proof Approval</h3>
            <p class="text-gray-600 text-sm">Branded products are produced according to your approved artwork and specifications. Due to their bespoke nature, we cannot accept returns unless the goods are defective or do not match the approved proof.</p>
            <p class="text-gray-600 text-sm mt-2">Please review your proof carefully before approval. For full terms regarding branded products, see our <%= link_to "Terms of Service", terms_conditions_path, class: "text-primary hover:underline font-medium" %>.</p>
          </div>
        </div>
      </section>

      <!-- Section 7: Production Tolerance -->
      <section id="tolerance" class="p-6 lg:p-8 bg-gray-50 rounded-b-lg">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">7. Production Tolerance</h2>

        <p class="text-gray-600 text-sm mb-4">All orders are subject to a standard tolerance of up to ±10% on quantities produced and/or delivered. This tolerance also applies to printing results, including but not limited to colour variation, registration, and finishing.</p>

        <p class="text-gray-600 text-sm">Such variations are considered normal within industry standards and do not constitute a defect or grounds for rejection, refund, or reprint. By placing an order, the customer acknowledges and accepts this tolerance.</p>
      </section>
    </div>

    <!-- Contact Card -->
    <div class="bg-white border border-gray-200 rounded-lg p-6 lg:p-8 mt-8 shadow-sm">
      <h2 class="text-lg font-semibold text-gray-900 mb-3">Need Help?</h2>
      <p class="text-gray-600 mb-4">If you have any questions about delivery or returns, our team is here to help.</p>
      <div class="flex flex-wrap gap-4">
        <a href="mailto:hello@afida.com" class="inline-flex items-center text-primary hover:underline font-medium">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          hello@afida.com
        </a>
        <%= link_to contact_path, class: "inline-flex items-center text-primary hover:underline font-medium" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          Contact Us
        <% end %>
      </div>
    </div>

    <!-- Related Links -->
    <div class="mt-8 pb-8">
      <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">Related Policies</h3>
      <div class="flex flex-wrap gap-3">
        <%= link_to "Terms of Service", terms_conditions_path, class: "text-sm text-primary hover:underline" %>
        <%= link_to "Privacy Policy", privacy_policy_path, class: "text-sm text-primary hover:underline" %>
        <%= link_to "Cookies Policy", cookies_policy_path, class: "text-sm text-primary hover:underline" %>
      </div>
    </div>
  </div>
</div>
