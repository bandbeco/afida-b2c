<% content_for :og_tags_custom, true %>
<% content_for :twitter_tags_custom, true %>
<% content_for :head do %>
  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:title" content="Premium Eco-Friendly Packaging Supplies | Afida">
  <meta property="og:description" content="<%= content_for(:meta_description) %>">
  <meta property="og:url" content="<%= root_url %>">
  <meta property="og:site_name" content="Afida">
  <meta property="og:image" content="<%= hero_image_url %>">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="Premium Eco-Friendly Packaging Supplies | Afida">
  <meta name="twitter:description" content="<%= content_for(:meta_description) %>">
  <meta name="twitter:image" content="<%= hero_image_url %>">
<% end %>

<div class="drawer drawer-end">
  <input id="cart-drawer" type="checkbox" class="drawer-toggle" aria-label="Toggle shopping cart" />
  <div class="drawer-content">
    <%= render "pages/partials/hero" %>

    <%= render "pages/partials/client_logos" %>

    <%= render "pages/partials/shop_by_category" %>

    <%= render "pages/partials/bestsellers" %>

    <%= render "pages/partials/branding" %>

    <%= render "pages/partials/shop_by_collection" %>

    <%= render "pages/partials/straws" %>
  </div>

  <div class="drawer-side">
    <label for="cart-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <div class="bg-base-200 text-base-content h-full w-80 p-4 flex flex-col">
      <%= render "shared/drawer_cart_content" %>
    </div>
  </div>
</div>