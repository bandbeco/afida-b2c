<!-- Hero Section -->
<div class="w-screen relative left-[50%] right-[50%] -mx-[50vw] bg-[#f4fbf8] overflow-hidden">
  <div class="container mx-auto px-4 py-12 lg:py-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <div class="max-w-2xl">
        <h1 class="text-3xl lg:text-4xl font-black text-neutral-900 leading-tight mb-6 tracking-tight" data-controller="slide-in">
          <span data-slide-in-target="item">Eco-friendly catering supplies</span><br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00a86b] to-[#79ebc0]" data-slide-in-target="item">Delivered Fast.</span>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#00a86b] to-[#79ebc0]" data-slide-in-target="item">Zero Storage Hassle.</span>
        </h1>

        <p class="text-lg text-neutral-600 mb-8 leading-relaxed max-w-lg">
          Supply your restaurant, café, or takeaway with high-quality eco-friendly packaging. From custom branded cups to bamboo straws, we deliver everything you need within 48 hours. With free storage and inventory management included.
        </p>

        <div class="flex flex-wrap gap-6 mb-16">
          <!-- Free Delivery Badge -->
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-[#00a86b] flex-shrink-0"><path d="M10 16V9.5a1 1 0 0 1 5 0"/><path d="M8 12h4"/><path d="M8 16h7"/><circle cx="12" cy="12" r="10"/></svg>
            <span class="text-sm font-medium text-neutral-700">Free delivery on orders over £100 <span class="text-xs text-neutral-500">(excl. VAT)</span></span>
          </div>

          <!-- 48-hour Delivery Badge -->
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-[#00a86b] flex-shrink-0">
              <path d="M13 16a3 3 0 0 1 2.24 5"/>
              <path d="M18 12h.01"/>
              <path d="M18 21h-8a4 4 0 0 1-4-4 7 7 0 0 1 7-7h.2L9.6 6.4a1 1 0 1 1 2.8-2.8L15.8 7h.2c3.3 0 6 2.7 6 6v1a2 2 0 0 1-2 2h-1a3 3 0 0 0-3 3"/>
              <path d="M20 8.54V4a2 2 0 1 0-4 0v3"/>
              <path d="M7.612 12.524a3 3 0 1 0-1.6 4.3"/>
            </svg>
            <span class="text-sm font-medium text-neutral-700">48-hour delivery</span>
          </div>

          <!-- Free Storage Badge -->
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-[#00a86b] flex-shrink-0">
              <path d="M18 21V10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1v11"/>
              <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 1.132-1.803l7.95-3.974a2 2 0 0 1 1.837 0l7.948 3.974A2 2 0 0 1 22 8z"/>
              <path d="M6 13h12"/>
              <path d="M6 17h12"/>
            </svg>
            <span class="text-sm font-medium text-neutral-700">Free storage</span>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <%= link_to shop_path, class: "btn btn-primary btn-lg shadow-lg shadow-black/20" do %>
            Shop Products
          <% end %>
        </div>

        <% client_logos = [
          "ballie-ballerson.png",
          "edwardian-hotels.svg",
          "hawksmoor.png",
          "hurlingham.png",
          "la-gelateria.png",
          "mandarin-oriental.svg",
          "marriott.svg",
          "pixel-bar.png",
          "royal-lancaster.svg",
          "the-grove.webp",
          "vincenzos.svg"
        ] %>

        <div class="mt-8 mb-12 flex items-center gap-4 text-sm text-neutral-500 font-medium">
          <div class="flex -space-x-2">
            <% client_logos.reject { |logo| logo == "the-grove.webp" }.each do |logo| %>
              <div class="w-8 h-8 rounded-full bg-gray-200 border-2 border-white">
                <%= vite_image_tag "images/logos/#{logo}", class: "w-full h-full object-contain" %>
              </div>
            <% end %>
