<div class="py-4 sm:py-8">
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6">
    <h1>Blog Posts</h1>
    <div class="flex gap-2">
      <%= link_to new_admin_blog_post_path, class: "btn btn-sm sm:btn-md btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <span class="hidden sm:inline">New Post</span>
      <% end %>
    </div>
  </div>

  <%# Desktop Table View %>
  <div class="hidden md:block overflow-x-auto">
    <table class="table table-zebra w-full">
      <thead>
        <tr>
          <th>Title</th>
          <th>Slug</th>
          <th>Status</th>
          <th>Published</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @blog_posts.each do |post| %>
          <tr>
            <td>
              <span class="font-medium"><%= post.title %></span>
            </td>
            <td>
              <span class="font-mono text-sm text-gray-500"><%= post.slug %></span>
            </td>
            <td>
              <% if post.published? %>
                <span class="badge badge-success">Published</span>
              <% else %>
                <span class="badge badge-warning">Draft</span>
              <% end %>
            </td>
            <td>
              <% if post.published_at.present? %>
                <%= post.published_at.strftime("%b %d, %Y") %>
              <% else %>
                <span class="text-gray-400">â€”</span>
              <% end %>
            </td>
            <td>
              <div class="flex gap-1">
                <%= link_to edit_admin_blog_post_path(post), class: "btn btn-sm btn-ghost" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                  </svg>
                <% end %>
                <% if post.published? %>
                  <%= link_to blog_post_path(post), class: "btn btn-sm btn-ghost", target: "_blank" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                    </svg>
                  <% end %>
                <% end %>
                <%= button_to admin_blog_post_path(post), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this post?" } }, class: "btn btn-sm btn-ghost text-error" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%# Mobile Card View %>
  <div class="md:hidden space-y-4">
    <% @blog_posts.each do |post| %>
      <div class="card bg-base-100 shadow-sm border border-base-300">
        <div class="card-body p-4">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="font-medium"><%= post.title %></h3>
              <p class="text-sm text-gray-500 font-mono"><%= post.slug %></p>
            </div>
            <% if post.published? %>
              <span class="badge badge-success badge-sm">Published</span>
            <% else %>
              <span class="badge badge-warning badge-sm">Draft</span>
            <% end %>
          </div>
          <div class="flex justify-between items-center mt-4">
            <% if post.published_at.present? %>
              <span class="text-sm text-gray-500"><%= post.published_at.strftime("%b %d, %Y") %></span>
            <% else %>
              <span class="text-sm text-gray-400">Not published</span>
            <% end %>
            <div class="flex gap-1">
              <%= link_to edit_admin_blog_post_path(post), class: "btn btn-sm btn-ghost" do %>
                Edit
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @blog_posts.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-600 mb-4">No blog posts yet.</p>
      <%= link_to "Create your first post", new_admin_blog_post_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
