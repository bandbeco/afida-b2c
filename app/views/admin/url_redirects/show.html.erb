<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Redirect Details</h1>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_url_redirect_path(@redirect), class: "btn btn-primary" %>
      <%= link_to "Back", admin_url_redirects_path, class: "btn btn-ghost" %>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <table class="table">
        <tbody>
          <tr>
            <td class="font-bold w-1/4">Legacy Path</td>
            <td class="font-mono"><%= @redirect.source_path %></td>
          </tr>
          <tr>
            <td class="font-bold">Target Slug</td>
            <td class="font-mono"><%= @redirect.target_slug %></td>
          </tr>
          <tr>
            <td class="font-bold">Target URL</td>
            <td class="font-mono"><%= @redirect.target_url %></td>
          </tr>
          <tr>
            <td class="font-bold">Variant Parameters</td>
            <td><pre class="text-sm"><%= JSON.pretty_generate(@redirect.variant_params) %></pre></td>
          </tr>
          <tr>
            <td class="font-bold">Hit Count</td>
            <td><%= @redirect.hit_count %> redirects</td>
          </tr>
          <tr>
            <td class="font-bold">Status</td>
            <td>
              <% if @redirect.active? %>
                <span class="badge badge-success">Active</span>
              <% else %>
                <span class="badge badge-ghost">Inactive</span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="font-bold">Created At</td>
            <td><%= @redirect.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
          <tr>
            <td class="font-bold">Updated At</td>
            <td><%= @redirect.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
        </tbody>
      </table>

      <div class="card-actions justify-end mt-4">
        <%= link_to "Test Redirect", test_admin_url_redirect_path(@redirect), class: "btn btn-secondary" %>
        <%= button_to "Toggle Status", toggle_admin_url_redirect_path(@redirect), method: :patch, class: "btn btn-warning" %>
        <%= button_to "Delete", admin_url_redirect_path(@redirect), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-error" %>
      </div>
    </div>
  </div>
</div>
