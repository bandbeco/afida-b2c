<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Test Redirect</h1>
    <%= link_to "Back", admin_url_redirect_path(@redirect), class: "btn btn-ghost" %>
  </div>

  <div class="card bg-base-100 shadow-xl max-w-2xl">
    <div class="card-body">
      <h2 class="card-title">Redirect Test Results</h2>

      <div class="space-y-4 mt-4">
        <div>
          <div class="font-bold">Source URL:</div>
          <div class="font-mono text-sm"><%= @source_url %></div>
        </div>

        <div>
          <div class="font-bold">Target URL:</div>
          <div class="font-mono text-sm"><%= @target_url %></div>
        </div>

        <div>
          <div class="font-bold">HTTP Status:</div>
          <div><span class="badge badge-success"><%= @http_status %> Permanent Redirect</span></div>
        </div>

        <div>
          <div class="font-bold">Variant Match Status:</div>
          <div><%= @variant_match_status %></div>
        </div>
      </div>

      <div class="card-actions justify-end mt-6">
        <%= link_to "Test in Browser", @source_url, class: "btn btn-primary", target: "_blank" %>
      </div>
    </div>
  </div>
</div>
