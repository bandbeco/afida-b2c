<nav class="bg-gray-900 border-b border-gray-800 fixed top-0 left-0 right-0 z-30">
  <div class="px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Left side - Back to shop -->
      <div class="flex items-center gap-2">
        <%= link_to root_path, class: "hidden sm:flex items-center px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 transition-colors duration-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
          </svg>
          <span>Back to Shop</span>
        <% end %>
      </div>

      <!-- Center - Logo and Admin Panel -->
      <div class="flex flex-col items-center">
        <div class="flex-shrink-0">
          <%= render "shared/logo" %>
        </div>
        <span class="text-xs text-gray-400 uppercase tracking-wider mt-1 hidden sm:block">Admin Panel</span>
      </div>

      <!-- Right side - User section -->
      <div class="flex items-center">
        <% if authenticated? %>
          <%# Desktop view %>
          <div class="hidden md:flex items-center space-x-3">
            <div class="flex items-center text-sm">
              <div class="w-8 h-8 rounded-full bg-gray-700 flex items-center justify-center mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <span class="text-gray-300 font-medium"><%= Current.user.email_address %></span>
            </div>

            <%= button_to session_path, method: :delete, class: "ml-4 inline-flex items-center px-4 py-2 border border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-300 bg-gray-800 hover:bg-gray-700 hover:border-gray-500 focus:outline-none transition-colors duration-200" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Sign Out
            <% end %>
          </div>

          <%# Mobile view - just sign out icon %>
          <div class="md:hidden">
            <%= button_to session_path, method: :delete, class: "btn btn-ghost btn-sm text-gray-300" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
            <% end %>
          </div>
        <% else %>
          <%= link_to new_session_path, class: "btn btn-primary btn-sm" do %>
            Sign In
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
