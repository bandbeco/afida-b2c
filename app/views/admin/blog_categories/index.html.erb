<% content_for :title, "Blog Categories | Admin" %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">Blog Categories</h1>
  <%= link_to "New Category", new_admin_blog_category_path, class: "btn btn-primary" %>
</div>

<% if @blog_categories.any? %>
  <div class="overflow-x-auto">
    <table class="table table-zebra">
      <thead>
        <tr>
          <th>Name</th>
          <th>Slug</th>
          <th>Posts</th>
          <th class="w-32">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @blog_categories.each do |category| %>
          <tr>
            <td class="font-medium"><%= category.name %></td>
            <td class="font-mono text-sm text-gray-500"><%= category.slug %></td>
            <td><%= category.blog_posts.size %></td>
            <td>
              <div class="flex gap-2">
                <%= link_to "Edit", edit_admin_blog_category_path(category), class: "btn btn-ghost btn-sm" %>
                <%= button_to "Delete", admin_blog_category_path(category),
                              method: :delete,
                              form: { data: { turbo_confirm: "Are you sure you want to delete this category? Posts will be uncategorized." } },
                              class: "btn btn-ghost btn-sm text-error" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-12 bg-base-200 rounded-lg">
    <p class="text-gray-600 mb-4">No categories yet.</p>
    <%= link_to "Create your first category", new_admin_blog_category_path, class: "btn btn-primary" %>
  </div>
<% end %>
