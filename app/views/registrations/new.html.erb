<% content_for :title, "Create Account | Afida" %>
<% content_for :meta_description, "Create an Afida account to access order history, quick reordering, and scheduled deliveries for your eco-friendly catering supplies." %>

<div class="min-h-[80vh] flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-5xl grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">

    <%# Left column: Value proposition %>
    <div class="order-2 lg:order-1">
      <h1 class="text-4xl lg:text-5xl text-base-content leading-tight mb-6">
        Your orders, remembered
      </h1>
      <p class="text-xl text-base-content/70 mb-10">
        Reorder your favourites in seconds.
      </p>

      <div class="space-y-6">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg text-base-content">Order history</h3>
            <p class="text-base-content/70">See what you've ordered and when</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg text-base-content">Quick reorder</h3>
            <p class="text-base-content/70">Repeat any order in two clicks</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg text-base-content">Scheduled orders</h3>
            <p class="text-base-content/70">Set it and forget it â€” we'll deliver on schedule</p>
          </div>
        </div>
      </div>
    </div>

    <%# Right column: Sign up form %>
    <div class="order-1 lg:order-2">
      <%= form_with model: @user, url: registration_path, html: { class: "bg-base-100 border-base-300 rounded-2xl border p-8 shadow-xl" } do |form| %>
        <h2 class="text-2xl text-center mb-8">Create your account</h2>

        <% if @user.errors.any? %>
          <div class="alert alert-error mb-6">
            <ul class="list-disc list-inside">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-control">
          <%= form.label :email_address, class: "label" do %>
            <span class="label-text font-medium">Email</span>
          <% end %>
          <%= form.email_field :email_address, required: true, autofocus: true, class: "input input-bordered w-full input-lg", placeholder: "you@company.com" %>
        </div>

        <div class="form-control mt-5" data-controller="password-visibility">
          <%= form.label :password, class: "label" do %>
            <span class="label-text font-medium">Password <span class="font-normal text-base-content/50">(min. 8 characters)</span></span>
          <% end %>
          <div class="relative">
            <%= form.password_field :password, required: true, minlength: 8, class: "input input-bordered w-full input-lg pr-12", placeholder: "Create a password", data: { password_visibility_target: "input" } %>
            <button type="button" class="absolute right-3 top-1/2 -translate-y-1/2 text-base-content/50 hover:text-base-content transition-colors" data-action="password-visibility#toggle" aria-label="Toggle password visibility">
              <%# Eye icon (show password) %>
              <svg data-password-visibility-target="showIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <%# Eye-off icon (hide password) %>
              <svg data-password-visibility-target="hideIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
              </svg>
            </button>
          </div>
        </div>

        <div class="form-control mt-8">
          <%= form.submit "Sign Up", class: "btn btn-primary w-full btn-lg text-lg" %>
        </div>

        <div class="text-center mt-6">
          <span class="text-base-content/60">Already have an account?</span>
          <%= link_to "Log In", new_session_path, class: "link link-primary font-medium ml-1" %>
        </div>
      <% end %>
    </div>

  </div>
</div>