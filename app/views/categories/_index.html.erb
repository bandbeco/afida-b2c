<div class="flex flex-wrap justify-center gap-4 md:gap-8">
  <% @categories.each do |category| %>
    <%= link_to category_path(category), class: "group relative block w-full md:w-[calc(33.333%-1.5rem)] h-56 sm:h-72 md:h-96 overflow-hidden border-2 border-black rounded-2xl shadow-xl" do %>
      <!-- Background Image/Color -->
      <div class="absolute inset-0 pb-14">
        <% if category.image.attached? %>
          <%= image_tag category.image, alt: category.name, class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" %>
        <% elsif category_icon_path(category).present? %>
          <div class="w-full h-full bg-[#f4fbf8] flex items-center justify-center p-12 transition-transform duration-300 group-hover:scale-105">
            <%= vite_image_tag category_icon_path(category), class: 'w-full h-full object-contain opacity-80', alt: "#{category.name} icon" %>
          </div>
        <% else %>
          <div class="w-full h-full bg-[#f4fbf8] flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
            <span class="text-9xl font-black text-[#79ebc0]/20"><%= category.name[0] %></span>
          </div>
        <% end %>
      </div>

      <!-- Banner at bottom -->
      <div class="absolute bottom-0 left-0 right-0 bg-black px-5 py-3 flex items-center justify-center gap-2">
        <span class="text-white text-lg">Shop <%= category.name %></span>
        <%= render "components/chevron_right" %>
      </div>
    <% end %>
  <% end %>
</div>