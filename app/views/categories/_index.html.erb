<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
  <% @categories.each do |category| %>
    <%= link_to category_path(category), class: "group relative block aspect-square overflow-hidden border-2 border-black rounded-2xl shadow-xl" do %>
      <!-- Background Image/Color -->
      <div class="absolute inset-0 bottom-12 bg-[#f4fbf8]">
        <% if category.image.attached? %>
          <%= image_tag category.image, alt: category.name, class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" %>
        <% elsif category_icon_path(category).present? %>
          <div class="w-full h-full flex items-center justify-center p-6 transition-transform duration-300 group-hover:scale-105">
            <%= vite_image_tag category_icon_path(category), class: 'w-full h-full object-contain opacity-80', alt: "#{category.name} icon" %>
          </div>
        <% else %>
          <div class="w-full h-full flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
            <span class="text-7xl font-black text-[#79ebc0]/20"><%= category.name[0] %></span>
          </div>
        <% end %>
      </div>

      <!-- Banner at bottom -->
      <div class="absolute bottom-0 left-0 right-0 bg-black px-3 py-2.5 flex items-center justify-center">
        <span class="text-white text-sm md:text-base whitespace-nowrap truncate"><%= category.name %></span>
      </div>
    <% end %>
  <% end %>
</div>