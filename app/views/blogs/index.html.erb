<% content_for :title, "Blog - Afida" %>
<% content_for :meta_description, "Discover expert guides and tips on sustainable catering supplies from the Afida team." %>

<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl font-bold mb-2">Afida Blog</h1>
    <p class="text-lg text-gray-600">Expert guides and tips on sustainable catering supplies</p>
  </div>

  <% if @posts.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @posts.each do |post| %>
        <div class="card bg-base-100 shadow-sm hover:shadow-md transition">
          <%= link_to blog_path(post.slug), data: { turbo_frame: "_top" } do %>
            <% if post.header_image_url.present? %>
              <figure class="aspect-video">
                <%= image_tag post.header_image_url, alt: post.title, class: "w-full h-full object-cover" %>
              </figure>
            <% else %>
              <figure class="aspect-video bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center">
                <span class="text-6xl font-bold text-primary/30">
                  <%= post.title[0] %>
                </span>
              </figure>
            <% end %>

            <div class="card-body">
              <h2 class="card-title text-xl mb-2"><%= post.title %></h2>

              <p class="text-sm text-gray-500 mb-3">
                <%= post.published_at.strftime("%B %d, %Y") %>
              </p>

              <% if post.meta_description.present? %>
                <p class="text-sm text-gray-600 line-clamp-3">
                  <%= post.meta_description %>
                </p>
              <% else %>
                <p class="text-sm text-gray-600 line-clamp-3">
                  <%= strip_tags(post.body).truncate(150, separator: " ") %>
                </p>
              <% end %>

              <div class="card-actions justify-end mt-4">
                <span class="link link-primary text-sm">Read more â†’</span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>No blog posts published yet. Check back soon!</span>
    </div>
  <% end %>
</div>
