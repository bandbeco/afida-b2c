<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl">Saved Addresses</h1>
    <%= link_to "Add new address", new_account_address_path, class: "btn btn-primary" %>
  </div>

  <% if @addresses.any? %>
    <div id="addresses" class="grid gap-4 md:grid-cols-2">
      <%= render @addresses %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <h2 class="text-xl mb-2">No saved addresses yet</h2>
      <p class="text-base-content/60 mb-6">Add your delivery addresses for faster checkout.</p>
      <%= link_to "Add your first address", new_account_address_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-8">
    <%= link_to "â† Back to Account", account_path, class: "link link-hover" %>
  </div>
</div>
