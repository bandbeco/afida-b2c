<div id="<%= dom_id(address) %>" class="card bg-base-100 border border-base-200 shadow-sm">
  <div class="card-body">
    <div class="flex justify-between items-start">
      <div>
        <h2 class="card-title text-lg">
          <%= address.nickname %>
          <% if address.default? %>
            <span class="badge badge-primary badge-sm">Default</span>
          <% end %>
        </h2>
        <p class="font-medium"><%= address.recipient_name %></p>
        <% if address.company_name.present? %>
          <p class="text-base-content/70"><%= address.company_name %></p>
        <% end %>
      </div>
    </div>

    <div class="text-sm text-base-content/70 mt-2">
      <p><%= address.line1 %></p>
      <% if address.line2.present? %>
        <p><%= address.line2 %></p>
      <% end %>
      <p><%= address.city %>, <%= address.postcode %></p>
      <% if address.phone.present? %>
        <p class="mt-1"><%= address.phone %></p>
      <% end %>
    </div>

    <div class="card-actions justify-end mt-4 pt-4 border-t border-base-200">
      <% unless address.default? %>
        <%= button_to "Set as default", set_default_account_address_path(address),
            method: :patch,
            class: "btn btn-ghost btn-sm" %>
      <% end %>

      <%= link_to "Edit", edit_account_address_path(address), class: "btn btn-ghost btn-sm" %>

      <%= button_to "Delete", account_address_path(address),
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure you want to delete this address?" } },
          class: "btn btn-ghost btn-sm text-error" %>
    </div>
  </div>
</div>
