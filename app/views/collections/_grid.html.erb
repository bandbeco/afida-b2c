<div class="flex flex-wrap justify-center gap-4 md:gap-6">
  <% @collections.each do |collection| %>
    <%= link_to collection_path(collection),
        class: "group relative block aspect-square overflow-hidden border-2 border-black rounded-2xl shadow-xl w-[calc(50%-0.5rem)] md:w-[calc(25%-1.125rem)]" do %>
      <!-- Background Image/Color -->
      <div class="absolute inset-0 bottom-12 bg-[#f4fbf8]">
        <% if collection.image.attached? %>
          <%= image_tag collection.image, alt: collection.name,
              class: "w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" %>
        <% else %>
          <div class="w-full h-full flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
            <span class="text-7xl font-black text-[#79ebc0]/20"><%= collection.name[0] %></span>
          </div>
        <% end %>
      </div>

      <!-- Banner at bottom -->
      <div class="absolute bottom-0 left-0 right-0 bg-black px-3 py-2.5 flex items-center justify-center">
        <span class="text-white text-sm md:text-base whitespace-nowrap truncate"><%= collection.name %></span>
      </div>
    <% end %>
  <% end %>
</div>
