<% content_for :title do %>
Collections | Afida
<% end %>

<% content_for :meta_description do %>
Browse our curated collections of eco-friendly catering supplies, organised by business type and use case.
<% end %>

<% content_for :head do %>
  <%= canonical_url(collections_url) %>
<% end %>

<% content_for :breadcrumbs do %>
  <nav aria-label="Breadcrumb" class="text-sm breadcrumbs">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li>Collections</li>
    </ul>
  </nav>
<% end %>

<div class="drawer drawer-end">
  <input id="cart-drawer" type="checkbox" class="drawer-toggle" aria-label="Toggle shopping cart" />
  <div class="drawer-content">

    <h1 class="text-4xl mb-4">Collections</h1>

    <p class="text-lg text-base-content/70 mb-8">
      Find the perfect products for your business. Our collections are curated by industry and use case to help you discover everything you need in one place.
    </p>

    <% if @collections.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @collections.each do |collection| %>
          <%= render "collections/card", collection: collection %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        <h2 class="text-xl font-medium mb-2">No collections yet</h2>
        <p class="text-base-content/70">Check back soon for curated product collections.</p>
      </div>
    <% end %>

  </div>

  <div class="drawer-side">
    <label for="cart-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <div class="bg-base-200 text-base-content h-full w-80 p-4 flex flex-col">
      <%= render "shared/drawer_cart_content" %>
    </div>
  </div>
</div>
